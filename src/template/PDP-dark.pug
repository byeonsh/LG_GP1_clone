    div(style="position: fixed; top: 5px; left: 5px; z-index: 99999999999999")
        script.
            const changeDark = (color) => {
                document.body.classList.add('dark-theme');
                document.querySelectorAll('.ST0053, #pdp_features .bg-default, .ST0025, .CM0010, .PD0006, .PD0005, .PD0008, .PD0016').forEach(el=> {
                    if(color === 'black') {
                        el.classList.add('bg-black');
                        el.classList.remove('bg-darkgray');
                    } else {
                        el.classList.add('bg-darkgray');
                        el.classList.remove('bg-black');
                    }
                    el.classList.remove('bg-default');
                })
                document.querySelector('.PD0012').classList.add('type-dark')
            };
        <button type="button" class="type-toggle" onclick="changeDark('darkgray');">darkgray</button>
        <button type="button" class="type-toggle" onclick="changeDark('black');">black</button>

