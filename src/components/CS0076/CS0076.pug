extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_headline.pug
include ../_common/_image.pug
include ../_common/_carousel.pug
include ../_common/_video.pug
include ../_common/_hero-banner.pug
include ../_common/_spec-info.pug

block meta 
    - var componentId = "CS0076"
    - var componentName = "Register a Product Popup"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    //- script(src=componentId+".js")
    script(src=componentId+".js" type="module")

block content

    mixin trigger(controlsId)
        .button
            button.cmp-button.c-accordion__button.js-accordion-trigger(aria-expanded="false" aria-controls=`${controlsId}` aria-label="")
                span.c-accordion__button-text.expand.sr-only Expand
                span.c-accordion__button-text.collapse.sr-only Collapse
 
    mixin categoryItem
        .cmp-carousel__item.swiper-slide(data-cmp-data-layer="" data-cmp-hook-carousel="item")
            // block : text contents
            // Text align options default : center
            // option : target (_blank or _self)
            div.c-text-contents
                .c-prd
                    .c-prd-info
                        +image
                        .c-prd-info__inner 
                            dl 
                                dt.font-m-normal-12.font-w-normal-16 Model number
                                dd.font-m-normal-12.font-w-normal-16 27MP500-B
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Serial number
                                dd.font-m-normal-12.font-w-normal-16 SE220928MO
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Purchase date
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                    //- .button
                    //-     +linkButton({color:'black',type:"box-outlined",  name:"View product support", size:'small'})
                    //-     +linkButton({color:'black',type:"box-outlined", name:"Repair Request", size:'small'})
            if block
                block

    mixin categoryItem2(type)
        .cmp-carousel__item.swiper-slide(data-cmp-data-layer="" data-cmp-hook-carousel="item")
            // block : text contents
            // Text align options default : center
            // option : target (_blank or _self)
            div.c-text-contents
                if type !== "home" 
                    .text.c-text-contents__headline.top
                        .cmp-text.font-w-semibold-24.font-m-semibold-20(data-cmp-data-layer="")
                            p INSTAVIEW™ DOOR-IN-DOOR®aaaa
                .c-prd
                    .c-prd-info
                        +image
                        .c-prd-info__inner 
                            dl 
                                dt.font-m-normal-12.font-w-normal-16 Model number
                                dd.font-m-normal-12.font-w-normal-16 27MP500-B
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Serial number
                                dd.font-m-normal-12.font-w-normal-16 SE220928MO
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Register date
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Place of purchase
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                            dl
                                dt.font-m-normal-12.font-w-normal-16 ThinQ connected date
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                    //- .button
                    //-     +linkButton({color:'black',type:"box-outlined",  name:"Quick Registration", size:'small', class:'toastOpen'})(tabindex="0" role="button" aria-label="")
            if block
                block

    mixin categoryItem3
        .cmp-carousel__item.swiper-slide(data-cmp-data-layer="" data-cmp-hook-carousel="item")
            // block : text contents
            // Text align options default : center
            // option : target (_blank or _self)
            div.c-text-contents
                .c-prd
                    .c-prd-info.c-prd-info__type-grid
                        .c-prd-info__text.font-m-normal-20.font-w-normal-20 LG NANO76 70inch 4K SMART NANOCELL TV LG NANO76 70inch 4K SMART NANOCELL TV 
                        +image                        
                        .c-prd-info__inner 
                            dl 
                                dt.font-m-normal-12.font-w-normal-16 Model number
                                dd.font-m-normal-12.font-w-normal-16 27MP500-B
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Serial number
                                dd.font-m-normal-12.font-w-normal-16 SE220928MO
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Register date
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                            dl
                                dt.font-m-normal-12.font-w-normal-16 Place of purchase
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                            dl
                                dt.font-m-normal-12.font-w-normal-16 ThinQ connected date
                                dd.font-m-normal-12.font-w-normal-16 17/09/22
                    //- .button
                    //-     +linkButton({color:'black',type:"box-outlined",  name:"Quick Registration", size:'small', class:'toastOpen'})(tabindex="0" role="button" aria-label="")
            if block
                block

    mixin image
        // block : image
        .image.c-image
            +printLazyPicture('https://via.placeholder.com/48x48/000/333/?text=48x48', 'https://via.placeholder.com/160x160/000/333/?text=160x160')   

            if block
                block
    
    mixin carouselPaginationUI 
        // 23.02.14 modified markup - added ".c-carousel__handler--dial", ".c-carousel__handler--away-from-carousel"
        .c-carousel__handler.c-carousel__handler--dial.c-carousel__handler--away-from-carousel
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"prev"})
            +carouselPagination
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"next"})

    .guide-text-type Register a Product Popup

    // Component Markup 
    .guide-text-option Register Product with ThinQ Popup
    .c-wrapper.CS0076.bg-white.type-text.type-home.cs-popup.cs-popup__type1
        .component.cs-component
            .CS0076__container.c-full
                // Delete the style below when using a single popup
                //- .c-modal
                .c-modal(style="position:initial")
                    .c-modal__dimmed
                    .c-modal__box
                        .c-modal-head__wrap
                            .c-modal__head.c-cs-header
                                .c-text-contents
                                    .title.c-text-contents__headline
                                        +headline('font-w-light-56 font-m-light-28',h2,'Register products with ThinQ')
                                    .text.c-text-contents__bodycopy
                                        .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                                            span If you have registered products with ThinQ, you can link it to LG.com with a few clicks.
                                //- h5.c-modal__title.font-m-semibold-24.font-w-semibold-28 Manual & Software
                                button(type="button" role="button").c-modal__closebtn close btn                       
                        .c-modal__content          
                            .c-modal__content-scroll-box 
                                //- .c-result.font-m-normal-12.font-w-normal-16
                                //-     span.c-result__number 9
                                //-     | products
                                .carousel.panelcontainer
                                    // block : swiper-category
                                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                                        .cmp-carousel__content.swiper-wrapper
                                            - for (var x = 0; x < 5; x++)
                                                +categoryItem2("home")
                                        +carouselPaginationUI
                        .c-modal__bottom 
                            .button.c-cta       
                                +defaultButton({name: 'OK', wSize: 'medium', mSize: 'small', buttonStyle: 'default'})(disabled)

        #toast.toast.font-m-normal-14.font-w-normal-14(tabindex="0") Registration Successful!
            img.closeBtn(src="../../assets/icon/icon-close-white-16-16.svg")   

    .guide-text-option View all Registered product Popup
    .c-wrapper.CS0076.bg-white.type-text.type-home.cs-popup
        .component.cs-component
            .CS0076__container.c-full
                // Delete the style below when using a single popup
                // 20230327 add class .c-modal__type2
                .c-modal.c-modal__type2(style="position:initial")
                    .c-modal__dimmed
                    .c-modal__box
                        .c-modal-head__wrap
                            .c-modal__head.c-cs-header
                                .c-text-contents
                                    .title.c-text-contents__headline
                                        +headline('font-w-light-56 font-m-light-28',h2,'Register products')
                                    .text.c-text-contents__bodycopy
                                        .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                                            span If you have registered products with ThinQ, you can link it to LG.com with a few clicks.
                                //- h5.c-modal__title.font-m-semibold-24.font-w-semibold-28 Manual & Software
                                button(type="button" role="button").c-modal__closebtn close btn                       
                        .c-modal__content          
                            .c-modal__content-scroll-box 
                                .c-result.font-m-normal-12.font-w-normal-16
                                    span.c-result__number 9
                                    | products
                                .carousel.panelcontainer
                                    // block : swiper-category
                                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                                        .cmp-carousel__content.swiper-wrapper
                                            - for (var x = 0; x < 5; x++)
                                                +categoryItem
                                        +carouselPaginationUI
                        .c-modal__bottom 
                            .button.c-cta       
                                +button({color:'red',type:"box",name:"Ok", size: "large"})(aria-label="" role="button")

    .guide-text-option Global
    .c-wrapper.CS0076.bg-white.type-text.type-home.cs-popup
        .component.cs-component
            .CS0076__container.c-full
                // Delete the style below when using a single popup
                // 20230327 add class .c-modal__type2
                .c-modal.c-modal__type2(style="position:initial")
                    .c-modal__dimmed
                    .c-modal__box
                        .c-modal-head__wrap
                            .c-modal__head.c-cs-header
                                .c-text-contents
                                    .title.c-text-contents__headline
                                        +headline('font-w-light-56 font-m-light-28',h2,'Register products with ThinQ')
                                    .text.c-text-contents__bodycopy
                                        .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                                            span If you have registered products with ThinQ, you can link it to LG.com with a few clicks.
                                //- h5.c-modal__title.font-m-semibold-24.font-w-semibold-28 Manual & Software
                                button(type="button" role="button").c-modal__closebtn close btn                       
                        .c-modal__content          
                            .c-modal__content-scroll-box 
                                .c-result.font-m-normal-12.font-w-normal-16
                                    span.c-result__number 9
                                    | products
                                .carousel.panelcontainer
                                    // block : swiper-category
                                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                                        .cmp-carousel__content.swiper-wrapper
                                            - for (var x = 0; x < 5; x++)
                                                +categoryItem3
                                        +carouselPaginationUI
                        .c-modal__bottom 
                            .button.c-cta       
                                +defaultButton({name: 'OK', wSize: 'medium', mSize: 'small', buttonStyle: 'default'})(disabled)