mixin myProfile(params)
    -let data = {...params}
    .my-profile
        .my-profile__namebox.my-component__title-section
            +myProfileNameBox(data)
        +myProfileInfo(data)

mixin myProfileNameBox(params)
    - let data = {...params}  
    .my-profile__name   
        if data.isVip
            i.my-profile-vip__icon
                span.sr-only vip
            .my-profile-vip.font-w-bold-14.font-m-bold-12.font-red VIP
        a(href="#" title="move to My account page" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
            .font-w-normal-24.font-m-normal-20 !{data.name}
                .my-profile__more
                    span.sr-only icon more 

mixin myProfileInfo(params)
    - let data = {...params}
    .my-profile__info(class=`${!data.point ? "my-profile__info--no-point" : ""}`)
        if data.isObs
            if data.point && data.coupon
                .my-profile__info__container
                    a(href="#" class="my-profile-point" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                        .my-profile-point__info
                            i.my-profile-point__icon
                                span.sr-only point
                            .my-profile-point__text.font-w-normal-16 Points
                        .my-profile-point__number.font-w-semibold-24.font-m-semibold-18.font-red !{data.point}P
                    a(href="#" class="my-profile-coupon" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                        .my-profile-coupon__info
                            i.my-profile-coupon__icon
                                span.sr-only coupon
                            .my-profile-coupon__text.font-w-normal-16.font-m-normal-12 Coupons
                        .my-profile-coupon__number.font-w-semibold-24.font-m-semibold-18.font-red= data.coupon

            if !data.point && data.coupon
                .my-profile__info__container
                    //- a(href="#" class="my-profile-point" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                    //-     .my-profile-orders__info
                    //-         i.my-profile-orders__icon
                    //-             span.sr-only orders
                    //-         .my-profile-orders__text.font-w-normal-16 Orders
                    //-     .my-profile-orders__number.font-w-semibold-24.font-m-semibold-18.font-red !{data.order}
                    a(href="#" class="my-profile-coupon" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                        .my-profile-coupon__info
                            i.my-profile-coupon__icon
                                span.sr-only coupon
                            .my-profile-coupon__text.font-w-normal-16.font-m-normal-12 Coupons
                        .my-profile-coupon__number.font-w-semibold-24.font-m-semibold-18.font-red= data.coupon

        .my-profile__info-list
            ul  
                if data.point && data.order && data.coupon
                    li
                        a(href="#" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                            .my-profile__list-icon
                                span.my-profile__icon.my-profile__icon--cart orders
                                span.font-w-normal-16.font-m-normal-12 Orders
                            .my-profile__list-count
                                span.font-w-semibold-24.font-m-semibold-18 !{data.order}
                if data.product
                    li
                        a(href="#" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                            .my-profile__list-icon
                                span.my-profile__icon.my-profile__icon--product products
                                span.font-w-normal-16.font-m-normal-12 Products
                            .my-profile__list-count
                                span.font-w-semibold-24.font-m-semibold-18 !{data.product}
                if data.request
                    li
                        a(href="#" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                            .my-profile__list-icon
                                span.my-profile__icon.my-profile__icon--request repair request
                                span.font-w-normal-16.font-m-normal-12 Repair Request
                            .my-profile__list-count
                                span.font-w-semibold-24.font-m-semibold-18 !{data.request}
                if data.inquires
                    li
                        a(href="#" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                            .my-profile__list-icon
                                span.my-profile__icon.my-profile__icon--inquires inquires
                                span.font-w-normal-16.font-m-normal-12 Inquires
                            .my-profile__list-count
                                span.font-w-semibold-24.font-m-semibold-18 !{data.inquires}

                if data.review
                    li
                        a(href="#" title="view more" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                            .my-profile__list-icon
                                span.my-profile__icon.my-profile__icon--review review
                                span.font-w-normal-16.font-m-normal-12 Review
                            .my-profile__list-count
                                span.font-w-semibold-24.font-m-semibold-18 !{data.review}
