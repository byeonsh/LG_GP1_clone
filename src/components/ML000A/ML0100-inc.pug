    .ML0100
        +pop-msg-standard({id : "ThinqRegistrationPopUp", headline:"ThinQ Registration" , headLineStyle: "font-w-light-56 font-m-light-28", size: "large"})
            .c-pop-msg__contents
                .type-home.thinkq-popup.disableSwiper
                    .c-modal__box
                        .c-modal__content
