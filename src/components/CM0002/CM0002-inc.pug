    mixin footerDepth1Block(text, num=null, noSubMenu = false)
        .c-footer__name
            if noSubMenu 
                // GA4
                a.c-footer__depth1(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="" id=`aria-depth1_${num}`)= text
            else
                strong.c-footer__depth1(id=`aria-depth1_${num}`)= text
            if(num != null)
                button(type="button", aria-labelledby=`aria-depth1_${num}`, aria-expanded="false", aria-controls=`footerDepth1Area${num}`)
                    span.sr-only toggle Menu
    mixin footerDepth1Link(text, num=null)
        .c-footer__name 
            // GA4
            a.c-footer__depth1(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="" id=`aria-depth1_${num}`)&attributes(attributes)= text
            if(num != null)
                button(type="button", aria-labelledby=`aria-depth1_${num}`, aria-expanded="false", aria-controls=`footerDepth1Area${num}`)
                    span.sr-only toggle Menu
        if block 
            block
    mixin footerULDepth2(num=null)
        if(num == null)
            ul.c-footer__depth2
                if block
                    block
        else 
            ul.c-footer__depth2.folded(id=`footerDepth1Area${num}`)
                if block
                    block
    mixin footerULDepth3(num=null)
        if(num == null)
            ul.c-footer__depth3
                if block
                    block
        else 
            ul.c-footer__depth3.folded(id=`footerDepth2Area${num}`)
                if block
                    block
    mixin footerItemDepth2(text, link=true, button=false, num=0) 
        if (link == true)
            li.c-footer__item 
                // Depth 2
                .c-footer__name 
                    // GA4
                    a(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="" id=`aria-depth2_${num}`)&attributes(attributes)= text
                    if(button == true)
                        button(type="button", aria-labelledby=`aria-depth2_${num}`, aria-expanded="false", aria-controls=`footerDepth2Area${num}`)
                            span.sr-only toggle Menu
                if block 
                    block
        else
            li.c-footer__item
                // Depth 2
                .c-footer__name 
                    strong(id=`aria-depth2_${num}`)= text
                    if(button == true)
                        button(type="button", aria-labelledby=`aria-depth2_${num}`, aria-expanded="false", aria-controls=`footerDepth2Area${num}`)
                            span.sr-only toggle Menu
                if block 
                    block
    mixin footerItemDepth3(text)
        if text == "Chat With Us"
            li.c-footer__item 
                a(href="#CM0007" role="button")&attributes(attributes)= text
        else if text == "WhatsApp"
