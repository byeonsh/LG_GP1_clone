                // GA4
                a(href="#" target="_blank" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")&attributes(attributes)= text
        else
            li.c-footer__item 
                // GA4
                a(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")&attributes(attributes)= text

    mixin footerLink(text, id, buttonClass, className)
        li.c-footer__link
