            h3 preview
            .the51Guide__view(style="display:flex;flex-wrap:wrap;gap:10px;padding:0")
                include ../_common/_cart-price-total.pug
                div(style="flex-basis:calc(50% - 5px)")
                    .guide-text-option my lg order detail
                    +cartPriceTotal([
                        {
                            isStickyBottom: false,
                            isMobileBottomFixed: false,
                            useToggleFoldBtn: false,
                            taxInclude:true,
                            discount: true,
                            delivery: true,
                            service: true,
                            asidePaymentInfo: 'Credit card'
                        },
                    ])
                div(style="flex-basis:calc(50% - 5px)")
                    .guide-text-option cart
                    +cartPriceTotal([
                        {
                            isMobileBottomFixed: true,
                            useToggleFoldBtn: true,
                            taxInclude:true,
                            coupon: true,
                            delivery: true,
                            service: true,
                            card: true,
                            point: true,
                            btnName:"checkout",
                            msg:[
                                {type:"error", text:"“OLW480B” is out of stock and cannot be purchased."},
                                {type:"warning", text:"The purchase amount exceeds £2500. Klarna financing option is not available for payment."},
                                {type:"success", text:"We've removed the selected item(s) from your basket."},
                            ]
                        },
                    ])
                div(style="flex-basis:calc(50% - 5px)")
                    .guide-text-option checkout
                    +cartPriceTotal([
                        {
                            isMobileBottomFixed: true,
                            useToggleFoldBtn: true,
                            isStickyBottom: true,
                            taxInclude: true,
                            discount: true,
                            coupon: false,
                            delivery: true,
                            service: true,
                            card: false,
                            point: false,
                            btnName:"PLACE ORDER",
                            isBtnDisabled: true,
                        },
                    ])
                div(style="flex-basis:calc(50% - 5px)")
                    .guide-text-option order confirm
                    +cartPriceTotal([
                        {
                            taxInclude:true,
                            discount: true,
                            delivery: true,
                            service: true,
                            card: false,
                        },
                    ])



