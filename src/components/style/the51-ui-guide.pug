extends ../_common/_layout.pug
include ../_common/_index.pug

block meta 
    - var description = "description text"
    - var keywords = "keyword list"
    title LG GP1 ML UI Component Guide
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    style(type='text/css').
        .the51Guide {
            margin: 0 auto;
            max-width:800px;
        }
        .the51Guide__title {
            margin: 80px 0 0 0;
            font-size: 32px;
            font-weight: 600;
        }
        h2 + h2{
            padding-top: 10px;
        }
        .the51Guide h3 {
            margin:30px 0 0 0;
            font-weight: 600;
        }
        .the51Guide__title + h3 {
            margin-top:10px;
        }
        .the51Guide__desc {
            background: #eee;
            padding: 30px;
        }
        .the51Guide__options {
            margin: 10px 0;
            padding: 0;
            border: 1px solid #dee3ea;
            border-radius: 8px;
            background: #fff;
        }
        .the51Guide__options li {
            display: flex;
            justify-content: stretch;
            align-items: center;
            list-style: none;
        }
        .the51Guide__options li:not(:last-child) {
            border-bottom: 1px solid #dee3ea;
        }
        .the51Guide__options li p {
            position: relative;
            padding-left: 8px;
            margin-left: 3px;
            display: flex;
            align-items: center;
            font-size: 14px;
            color: #888;
        }
        .the51Guide__options li p:before {
            content: "";
            display: inline-block;
            position: absolute;
            top: 8px;
            left: 0;
            width: 3px;
            height: 3px;
            margin-right: 5px;
            border-radius: 50%;
            background: #9d1cd8;
        }
        .the51Guide__options--title {
            flex: 0 0 20%;
            min-width: 200px;
            padding: 0 10px;
        }
        .the51Guide__options--type {
            padding: 5px 5px 5px 20px;
            border-left: 1px solid #dee3ea;
        }
        .the51Guide__options--type-detail {
            flex-basis: 100%;
        }
        .the51Guide__link {
            color:deeppink;
            text-decoration:underline;
        }

