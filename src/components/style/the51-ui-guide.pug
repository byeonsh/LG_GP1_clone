            h2.the51Guide__title +linkBanner
            h3 include
            .the51Guide__include
                | include ../_common/_link-banner.pug
            h3 options
            ul.the51Guide__options 
                li 
                    .the51Guide__options--title bgColor
                    .the51Guide__options--type String 
                        .the51Guide__options--type-detail white
                li 
                    .the51Guide__options--title type
                    .the51Guide__options--type String (설정없음:기본)
                        .the51Guide__options--type-detail small | medium | large
                li 
                    .the51Guide__options--title border
                    .the51Guide__options--type Boolean
                        .the51Guide__options--type-detail 
                            p true - border 사용
                            p false(설정없음:기본) - border 없음
                li 
                    .the51Guide__options--title mobileTextAlignLeft
                    .the51Guide__options--type Boolean
                        .the51Guide__options--type-detail 
                            p true - 모바일 분기에서 버튼 제외하고 text-align:left 로 변경
                            p false(설정없음:기본) - text-align:center
                li 
                    .the51Guide__options--title title
                    .the51Guide__options--type object
                        .the51Guide__options--type-detail
                            p font - 폰트 관련 클래스 추가 
                            p text - 텍스트
                li 
                    .the51Guide__options--title desc
                    .the51Guide__options--type object
                        .the51Guide__options--type-detail 
                            p font - 폰트 관련 클래스 추가 
                            p text - 텍스트
                li 
                    .the51Guide__options--title button
                    .the51Guide__options--type object
                        .the51Guide__options--type-detail 
                            p type - 버튼 타입 (구 버전 버튼 mixin)
                            p color - 버튼 컬러 (구 버전 버튼 mixin)
                            p name - 버튼 텍스트
                            p size - 버튼 사이즈(web) :  small | medium | large
                            p sizeMobile - 버튼 타입(mobile) : small | medium | large
                            p buttonStyle - String
                                span default | highlight
                            p isButton - Boolean
                        pre 
                            |   button:[{
                            |       size: "medium",
                            |       sizeMobile: "medium",
                            |       name: "Continue Shopping",
                            |       buttonStyle: 'default',
                            |       isButton: false
                            |   }]
                li 
                    .the51Guide__options--title isArrowButton
                    .the51Guide__options--type Boolean
                        .the51Guide__options--type-detail 
                            p (ex ML000A MyLG-index) arrow 버튼일경우. true일경우 linkButton은 hidden
                
            include ../_common/_link-banner.pug
