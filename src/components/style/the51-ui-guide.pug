            ul.the51Guide__options 
                li 
                    .the51Guide__options--title title
                    .the51Guide__options--type String 
                        .the51Guide__options--type-detail 페이지 타이틀
                li 
                    .the51Guide__options--title subMenu
                    .the51Guide__options--type Array 
                        .the51Guide__options--type-detail sub menu
                
            include ../_common/_my-component.pug
            h3 preview
            .the51Guide__view
                +myComponentSubMenu({
                    title:"My orders",
                    subMenu:['m1', 'm2', 'm3']
                })



