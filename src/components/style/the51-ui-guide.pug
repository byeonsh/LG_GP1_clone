            .the51Guide__view
                +linkBanner({
                    mobileTextAlignLeft:true,
                    title:[{
                        text:"Get Manuals & Software",
                        font:false
                    }],
                    desc:[{
                        text:"Do you need the troubleshoot, manuals & software for this product?",
                        font:false
                    }], 
                    button:[{
                        type:"box-outlined",
                        color:"black",
                        size:"small",
                        name: "Find More",
                    }],
                })
                +linkBanner({
                    mobileTextAlignLeft:true,
                    title:[{
                        text:"Warranty",
                        font:"font-w-light-36 font-m-light-20"
                    }],
                    desc:[{
                        text:"Check the LG Warranty information and enjoy free repair service :)",
                        font:"font-w-normal-16 font-m-normal-16"
                    }], 
                    isArrowButton: true,
                    button:false,
                })

