    mixin printFont(class1, fontType)
        //- li.font-w-bold-64 font-w-bold-64 64px 64px Bold
        - var fontClass = class1
        li(class=fontClass)= fontClass + ': ' + fontType

    style(type="text/css").
        .guide-page p {
            font-family: initial;
