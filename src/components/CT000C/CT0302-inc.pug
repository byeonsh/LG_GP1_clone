mixin mySelect({optionVal=false, warning=false, label='', id='', infoText= false, placeholder='', warn=false, selected, tooltipMsg=false, readonly=false, disabled=false, infoTextSecond=false})
    .c-search-box__form(class=`${warning ? 'my-warn' : ''}`)
