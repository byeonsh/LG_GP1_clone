                span(class=`${data.date ? 'c-checkout-step03-preview__info--img' : 'c-checkout-step03-preview__info--img--column'} ${data.isBetween ? 'c-checkout-step03-preview__info--img--row' : ''} ${data.reverse ? 'c-checkout-step03-preview__info--img--column--reverse' : ''}`)
                    if data.isBetween
                        span.c-checkout-step03-preview__info--title!= data.title
                            if data.tooltip
                                +exclamTooltip(data.tooltip, false)
                            if data.popSrc
                                a.cmp-button.c-button.js-pop-open(href=`#${data.popSrc}` data-cmp-data-layer="" role="button")
                                    span.cmp-button__icon
                        if data.src
                            img(src=`${path + data.src}.svg`, alt=data.type)
                            if data.moImg
                                img.img-mo(src=`${path + data.moImg}.svg`, alt=data.type)
                    else
                        if data.src
                            img(src=`${path + data.src}.svg`, alt=data.type)
                        span.c-checkout-step03-preview__info--title= data.title
                if data.date
                    span.c-checkout-step03-preview__info--date= data.date
        if data.contents
