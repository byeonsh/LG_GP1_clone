include ./CT0303-inc.pug

mixin CT0303(option=false, country=false)
    .CT0303
        if(option === "before")
            .buy-checkout__item.before
                +checkoutStep({
                    title:"Payment",
                    current:"3",
                    total:"3",
                    type: ""
                })

        if(option === "complete") 
            .buy-checkout__item.buy-checkout__item--coupon.buy-checkout__item--complete
                +checkoutStep({
                    title:"Payment",
                    current:"3",
                    total:"3",
                    type: "checked",
                })         

        if(option === "default")
            .buy-checkout__item.buy-checkout__item--payment
                +checkoutStep({
                    title:"Payment",
                    current:"3",
                    total:"3",
                    type: "active"
                })
                .c-checkout-step03.c-checkout-step03-active
                    ul.c-checkout-step03-payment
                        case country
                            when 'kz'
                                +paymentBox([
                                    {
                                        type:"creditCard",
                                        title:"Оплата  банковской картой / Apple Pay",
                                    },
                                    {
                                        type:"kzInstallment",
                                        title:"В кредит / рассрочку",
                                    },
                                    {
                                        type:"kaspiPay",
                                        title:"Оплата с Kaspi.kz",
                                    },
                                    {
                                        type:"cardOnDelivery",
                                        title:"Card on Delivery",
                                    },
                                    {
                                        type:"cashOnDelevery",
                                        title:"Cash on Delivery",
                                    },
                                ], country)                             
                            default 
                                +paymentBox([
                                    {
                                        type:"creditCard",
                                        title:"Credit Card",
                                    },
                                    {
                                        type:"payPal",
                                        title:"PayPal",
                                        fillIcon:true
                                    },
                                    {
                                        type:"klarna",
                                        title:"Klarna",
                                    }
