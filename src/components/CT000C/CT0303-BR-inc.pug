mixin cardList(data, country=false)
    -let path = '../../assets/icon/';
        if data.title === "none"
            .installment-payment__list(class=`${data.add ? 'installment-payment__list--type2' : ''}`)
                each list in data.item
                    input(type="radio" id=`installment-bank-${list.type}-${data.name}-${country}` name=`installment-${data.name}` class="installment-payment__input")
                    label(for=`installment-bank-${list.type}-${data.name}-${country}` class="installment-payment__item")
                        img(src=`${path}icon-payment-bank-${list.type}.svg`, alt=list.type loading="lazy")
                        if list.moImg
                            img.img-mo(src=`${path + list.moImg}.svg`, alt=list.moImg)
                        span.installment-payment__item--name= list.subname
            if data.warning
                    .c-warning.font-m-normal-14.font-w-normal-14= data.warning
        else
            .c-text-contents
                .c-text-contents__title= data.title
            .installment-payment__list(class=`${data.add ? 'installment-payment__list--type2' : ''}`)
                each list in data.item
                    input(type="radio" id=`installment-bank-${list.type}-${data.name}-${country}` name=`installment-${data.name}` class="installment-payment__input")
                    label(for=`installment-bank-${list.type}-${data.name}-${country}` class="installment-payment__item") 
                        img(src=`${path}icon-payment-bank-${list.type}.svg`, alt=list.type loading="lazy")
                        if list.moImg
                            img.img-mo(src=`${path + list.moImg}.svg`, alt=list.moImg)
                        span.installment-payment__item--name= list.subname
            if data.warning
                    .c-warning.font-m-normal-14.font-w-normal-14= data.warning

