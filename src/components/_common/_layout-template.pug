        script(src="https://display.ugc.bazaarvoice.com/static/LGElectronics-en/en_GB/bvapi.js" async)
        // - BV2 (ex: us)
        script(src="https://apps.bazaarvoice.com/deployments/lgelectronics-en/main_site/staging/en_GB/bv.js" async)
        // - Shoppilot (ex: ru)
        script.
            window._shoppilot = window._shoppilot || [];
