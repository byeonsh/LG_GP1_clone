mixin productCard($params)
    - var config = {...$params}
    // GA4
    .c-product-item(data-pim-category1="" data-pim-category2="" data-pim-category3="" data-pim-category4="" data-pim-sku="" data-pim-model-name="" data-pim-model-year="" data-pim-flag="" data-pim-modeltype="" data-shop-stock-status="" data-shop-msrp="" data-shop-price="")
        .c-product-item__top-container
            // [Start] 2023-05-22 : UPDATE- if no .c-product-item__head add if(!config.hiddenHead)
            if(!config.hiddenHead)
                .c-product-item__head
                    if (config.best)
                        .c-product-item__best
                            span.sr-only= `Best`
                            span= `${config.best}`
                    if (config.flag)
                        .c-product-item__tag
                            .c-product-item__tag--flag
                                if(config.flag.length <= 2)
                                    - const arr= [ "Redemption", "Time Deal", "Sale", "Coupon", "Bundle", "Black Friday", "Holiday Special", "Pre order", "Pre Order"]
                                    - for (var x = 0; x < config.flag.length; x++)
                                        if(arr.includes(config.flag[x]) || config.flagHighlight)
                                            span.flag-highlight= config.flag[x]
                                        else
                                            span= config.flag[x]     
                    if (config.compare)
                        .c-product-item__compare
                            .c-checkbox-item
                                label.checkbox(id=`compare-${config.modelid}`)
                                    // for PD0014 test
                                    input(type="checkbox" onclick="if(document.querySelector('.PD0014')) {this.checked ? document.querySelector('.PD0014').classList.remove('hidden') : document.querySelector('.PD0014').classList.add('hidden');}" aria-labelledby=`ufn-${config.modelid} compare-${config.modelid}`)
                                    span.label Compare
                    if (config.packageSelect)
                        .c-product-item__select
                            +formCheckbox(false, `pdpPackageItem${config.packageSelect}`, `${config.sku}`, `pdpPackageItem${config.packageSelect}`, count="false", false)
                                strong.sr-only= `${config.sku} Select`
                    if (config.wishlist)
                        .c-product-item__wishlist
                            //- span.number 120
                            .c-tooltip
                                .button
                                    // Add 'active' class when button is activated
                                    button(type="button" aria-expanded="false" class="cmp-button c-icon-button c-icon-button--wish c-tooltip__button" data-cmp-data-layer="")
                                        span.sr-only add to wishlist
                                .c-tooltip__container.top-right
                                    .c-tooltip__contents.c-tooltip__contents--small
                                        .c-text-contents
                                            .text.c-text-contents__bodycopy
                                                .cmp-text.font-w-normal-14.font-m-normal-14(data-cmp-data-layer="")
                                                    p Add items to your MY LG wishlist
                                        .button
                                            +linkButton({type:"text",color:"black", underline:true, name: 'View Wishlist'})
            .c-product-item__headline
                if (config.sku)
                    .c-product-item__sku-inner
                        .c-product-item__sku= config.sku
                        //- A button was added as a script. So it was deleted.
                        //- button.btn-copy
                        //-     span.sr-only Copy model name
                if (config.ufn)
                    .c-product-item__ufn
                        // GA4
                        a(href="/template/PDP.html" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="" id=`ufn-${config.modelid}`)= config.ufn
            //- [Start] 2024-01-09 : ADD- review The second case(inhouseReview) 
            //- if(config.review)
            if(config.inhouseReview || config.review)
                .c-product-item__rating
                    //- if (config.grade)
                    //-     - var tagGrade = config.grade == "A" ? 'a' : config.grade
                    //-     .c-product-item__download
                    //-         a(href="#" role="button").c-product-item__download--click Product sheet
                    //-         .c-tooltip
                    //-             .button
                    //-                 button.c-tooltip__button.c-energy-grade(type="button" aria-expanded="false" class=`c-energy-grade--${tagGrade}`)
                    //-                     span.sr-only= `Energy Grade : ${tagGrade}`
                    //-             .c-tooltip__container
                    //-                 .c-tooltip__contents
                    //-                     a(href="#" role="button").font-w-bold-12i.font-m-bold-12i UK
                    //-                     a(href="#" role="button").font-w-bold-12i.font-m-bold-12i EU
                    if (config.review)
                        .c-product-item__rating
                            //-.c-product-item__rating--filled-star
                            .c-product-item__rating--number.font-w-normal-14i.font-m-normal-14i
                                .rating(data-bv-show="inline_rating", data-bv-product-id=`${config.modelid}`, data-bv-redirect-url="/template/PDP.html#pdp_review") 5.0 (10)
                            .c-product-item__rating--number.font-w-normal-14i.font-m-normal-14i
                                // BV 1
                                // .rating(data-modelid=`${modelid}`)
                                //     span
                                //         span.sr-only 5.0 out of 5 stars.
                                //         // GA4
                                //         a(href='/template/PDP.html#pdp_review' data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") 5.0 (10)
                                // or
                                // BV2
                                // .rating(data-bv-show="inline_rating", data-bv-product-id=`${modelid}`, data-bv-redirect-url="/template/PDP.html#pdp_review") 5.0 (10)
                                // or
                                // LGCOM
                                // .rating
                                //    span
                                //        span.sr-only 5.0 out of 5 stars.
                                //        // GA4
                                //        a(href='/template/PDP.html#pdp_review' data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") 5.0 (10)
                                // or
                                // SP
                                // .rating(data-shoppilot='oled65b2rla')
                                //    // GA4
                                //    a(href='/template/PDP.html#pdp_review' data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") 5.0 (10)
                    //- second case (inhouse review)
                    if(config.inhouseReview)
                        .c-star
                            .c-star__front-image
                                .c-star__back-image(style=`width:${config.ratingPercent};` aria-hidden="true")
                            span.font-w-normal-14.font-m-normal-14= config.ratingGrade
                            span.font-w-normal-14.font-m-normal-14= config.reviewNum
                    //- [End] 2024-01-09 :  ADD- review The second case(inhouseReview) 
            if(config.type && config.groups)
                .c-product-item__groups
                    - var count = config.groups.length
                    //- - var limited = count >= 5
                    - var limited = count >= 6
                    - var limitedInch = count >= 6
                    .c-product-item__model-group(class=`group-type-${config.type}${limited ? ' limited' : limitedInch ? ' limited' : ''}`)
                        ul.inner(role="menu")
                            case config.type
                                when 'inch'
                                    - for (var x = 0; x < count; x++)
                                        li(role="menuitem")
                                            button.swatch(aria-label=`${config.groups[x]} inch TV` type="button" class=`${x==0 ? 'active' : ''}` aria-pressed=`${x==0 ? 'true' : 'false'}`)
                                                span(aria-hidden="true")= `${config.groups[x]}"`
                                when 'color'
                                    - for (var x = 0; x < count; x++)
                                        li(role="menuitem")
                                            button.swatch(aria-label="target color name" type="button" class=`${x==0 ? ' active' : ''}` class=`${config.groups[x]}` aria-pressed=`${x==0 ? 'true' : 'false'}`)
                                                span.sr-only(aria-hidden="true") color name

                        if(limitedInch && config.type=='inch')
                            .limited-number(aria-hidden='true')= `(${count})`
                        if(limited && config.type=='color')
                            .limited-number(aria-hidden='true')= `(${count})`
            else
                .c-product-item__groups
            .c-product-item__img
                .c-product-item__visual-image
                    // GA4
                    a.image.c-image(href="/template/PDP.html" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                        if(config.imageSize == '450')
                            +printLazyImage('https://via.placeholder.com/450x450/999999/000000')
                        else
                            +printLazyImage('/mocks/product-350.png')
            if (config.signature)
                .c-product-item__brand
                    if(config.signature)
                        +printLazyImage("/assets/icon/icon-lg-signature-black-90-9.svg")
                        // When using the dark theme, display the white version of the signature logo image.
                        // <img class="cmp-image__image c-image__img" src="/assets/icon/icon-lg-signature-white-90-9.svg" alt="LG SIGNATURE" loading="lazy">
        .c-product-item__bottom-container
            if(config.youreko)
                .c-product-item__energy-saving(style="max-width:222px;height:66px;background:#fafafa;line-height:66px;text-align:center;overflow:hidden") Energy Saving Banner Area
                // Energy Saving Banner
                // -UK, AT, PL 사용
                // -3rd party service 사용 : youreko (https://www.youreko.com/)
                // -RO1국가 기준 적용 국가 없음
                // -Click interaction : youreco에서 제공하는 ‘Energy Saving’ 
                // Layer Pop-up 표시
            else
                .c-product-item__energy-saving

            if(config.proins)            
                +product_rating("A", 'MD07546559', false, false, false, false, false, true)

            if(config.gradeIs)
                .c-product-item__rating
                    // Product information sheet(Energy label)
                    // -사용 국가(DE, IT, PT, FR, TR, CA)
                    // -FR : 워시타워 등의 일부 제품에서 한 상품에 두가지의 Product sheet가 등록될 수 있음
                    // -Click interaction : Product information sheet 문서가 새창으로 열림.

                    if (config.grade)
                        - var tagGrade = config.grade == "A" ? 'a' : config.grade
                        .c-product-item__download
                            .c-tooltip
                                .button
                                    - var label = config.grade
                                    - var tagGrade = label == "A" ? 'a' : config.grade
                                    //- a(href="#", target="_blank", rel="noopener noreferrer" role="button" data-link-name="").c-tooltip__button.c-energy-grade
                                    button.c-tooltip__button.c-energy-grade(type="button" aria-expanded="false")
                                        //- +printLazyImage(`../../assets/icon/label-ap-a3.svg`)
                                        +printLazyPicture('../../assets/icon/icon-energy-grade-a-47-28.png', '../../assets/icon/icon-energy-grade-a-54-32.png')
                                        span.sr-only= `Energy Grade : ${tagGrade}`
                                .c-tooltip__container
                                    .c-tooltip__contents
                                        a(href="#" role="button").font-w-bold-12i.font-m-bold-12i UK
                                        a(href="#" role="button").font-w-bold-12i.font-m-bold-12i EU
                            if(config.gradeBlock2)
                                .c-tooltip
                                    .button
                                        - var label = config.grade
                                        - var tagGrade = label == "A" ? 'a' : config.grade
                                        //- a(href="#", target="_blank", rel="noopener noreferrer" role="button" data-link-name="").c-tooltip__button.c-energy-grade
                                        button.c-tooltip__button.c-energy-grade(type="button" aria-expanded="false")
                                            //- +printLazyImage(`../../assets/icon/label-ap-a3.svg`)
                                            +printLazyPicture(`../../assets/icon/label-energy-grade-${tagGrade}.svg`, `../../assets/icon/label-energy-grade-${tagGrade}.svg`)
                                            span.sr-only= `Energy Grade : ${tagGrade}`
                                    .c-tooltip__container
                                        .c-tooltip__contents
                                            a(href="#" role="button").font-w-bold-12i.font-m-bold-12i UK
                                            a(href="#" role="button").font-w-bold-12i.font-m-bold-12i EU
                            .c-tooltip
                                //- a(href="#" role="button").c-product-item__download--click Product information sheet
                                button.c-product-item__download--click.c-tooltip__button Product information sheet
                                .c-tooltip__container
                                    .c-tooltip__contents
                                        a(href="#" role="button").font-w-bold-12i.font-m-bold-12i WM
                                        a(href="#" role="button").font-w-bold-12i.font-m-bold-12i WD
            //-[Start] FR - Repairability Index Label
            if(config.repair)
                .c-product-item__repair
                    // Repairability Index
                    // -FR만 사용 
                    // -Click interaction : 수리편의성에 대한 문서 image가 새창으로 열림.
                    a.c-product-item__repair--click(href="#" target="_blank" role="button" rel="noopener noreferrer" data-link-name="")
                        //- RO - dev request one image
                        //- +printLazyPicture(`../../assets/image/icon-repair-index-fr-71-44.png`, '../../assets/image/icon-repair-index-fr-76-47.png')
                        .cmp-image(data-cmp-data-layer="")
                            img.cmp-image__image.c-image__img(src="../../assets/image/icon-repair-index-fr-96-56.png" alt="")
                        span.cmp-text Repairability index
            //-[End] FR - Repairability Index Label
            //- if(config.discontinued)
            //-     .c-product-item__price
            //-         .price-area
            //-             .price-box
            //-                 .c-price__flag--notice
            //-                     span Discontinued

            if(!config.noprice)
                .c-product-item__price
                    .price-area
                        if config.retailer
                            .price-box
                                .c-price__flag--retail See Retailer for Pricing
                        else
                            if config.promotion
                                .price-box
                                    .c-price__flag--promotion
                                        if config.prmRed
                                            span.red= config.promotion
                                        else 
                                            span= config.promotion
                            if config.limited
                                .price-box
                                    if config.limited
                                        .c-price__flag--limited
                                            span It's a limited product so you should hurry!
                                                //- span.qty 19
                            //- if config.limited || config.vip
                            //-     .price-box
                            //-         if config.vip
                            //-             .c-price__flag--vip
                            //-                 span VIP Price
                            //-         if config.limited
                            //-             .c-price__flag--limited
                            //-                 span Limited Quantities
                            //-                     span.qty 19
                            mixin priceBox
                                if config.outOfStock || config.soldOut
                                    .price-box(class="dimmed" aria-hidden="true")
                                        if block
                                            block
                                else
                                    .price-box
                                        if block
                                            block
                            if(config.discountTxt)
                                +priceBox
                                    .product-price
                                        .c-price
                                            //- .c-price__previous= config.priceValue == "" ? '£1,499.98' : config.priceValue
                                            del.c-price__previous
                                                if config.chpay
                                                    span 
                                                        span.smallFont ￥
                                                        span 99990.
                                                        span.smallFont 00
                                                else if config.vnpay
                                                    span 
                                                        span 99990.00
                                                        sup.smallFont ₫ 
                                                else if config.omnibus
                                                    span £1,499.98
                                                else
                                                    span £1,499.98
                                            span= config.omnibus ? '*' : ''
                                        .c-price
                                            .c-price__discount
                                                // 2024-01-03 할인가 유형별 전체 재정의 전까지 임시로 'discountPer' 사용
                                                if(config.discountPer)
                                                    span 25% Off
                                                else
                                                    span Save

                                                    if config.chpay
                                                        span 
                                                            span.smallFont ￥
                                                            span 99990.
                                                            span.smallFont 00
                                                    else if config.vnpay
                                                        span 
                                                            span 99990.00
                                                            sup.smallFont ₫ 
                                                    else
                                                        span= config.priceValue == "" ? '£1,499.98' : config.priceValue
                            if(config.Ab)
                                +priceBox
                                    // 할인 금액(율)은 원가와 최종판매가의 차액 및 율을 표시하며, 
                                    // 금액 or % 설정은 아래의 Preference Code로 관리 중
                                    // MSRP’ 표기의 경우 DE에서는 ‘UVP’로 표기됨
                                    // 230919, 'UVP' 텍스트 'Ab'로 교체
                                    .product-price.uvp-type
                                        .c-price
                                            .c-price__price Ab 
                                        .c-price
                                            del.c-price__previous €7,4990.00
                                            span= `${config.omnibus ? '*' : ''}`
                                        .c-price
                                            // 2024-04-26.c-price__discount--highlight 추가
                                            if (config.multishop)
                                                .c-price__discount.c-price__discount--highlight 
                                                    span Save £233.00
                                            else
                                                .c-price__discount 
                                                    span 33% Rabatt
                            if(config.brMsrp)
                                +priceBox
                                    //BR 에서 추가
                                    .product-price
                                        .c-price
                                            .c-price__price De 
                                        .c-price
                                            del.c-price__previous R$20.129,00
                                        .c-price
                                            .c-price__discount 
                                                span por
                            if(config.mrpPricing)
                                +priceBox
                                    .product-price.uvp-type.mrp-type
                                        if(config.mrpPricingtitle)
                                            .c-price
                                                .c-price__mrp-des MRP(Incl. of all taxes)
                                        .c-price
                                            del.c-price__previous ₹NNNNNN
                                        .c-price
                                            .c-price__discount 
                                                span NN% Off
                            +priceBox     
                                //금액표기가 길어질경우 product-price클래스에 flex-column클래스 추가하여 상하 배치 가능                           
                                .product-price.pdb(class=`${config.priceAreaColumn ? 'flex-column' : ''}`)                                
                                    .c-price
                                        - var priceValue = config.priceValue == "" ? '£1,499.98' : config.priceValue
                                        // 중국화폐일 경우 화폐단위 표시와 소수점 작게 표시
                                        if (config.chpay)
                                            .c-price__purchase 
                                                span.smallFont ￥
                                                span 99990.
                                                span.smallFont 00
                                        else if (config.jppay)
                                            .c-price__purchase 
                                                span ￥10,000
                                        else if (config.vnpay)
                                            .c-price__purchase 
                                                span 83.083.500
                                                sup.smallFont ₫ 
                                        else
                                            if(config.priceValue)
                                                .c-price__purchase=`${priceValue}`
                                            else if (!config.priceValue && config.multishop)
                                                .c-price__purchase 
                                                    // 2024-04-26 .price-percen 추가
                                                    span.price-percent -21%
                                                    |£1,499.98
                                            else
                                                .c-price__purchase £1,499.98

                                    if config.membership && config.vip
                                        .c-price__flag--vip
                                            span.flag VIP Price
                                            span= config.vip
                                    else if config.membership && !config.vip
                                        .c-price__flag--member
                                            if config.afterLogin
                                                span.flag Membership Price
                                            else 
                                                span.flag Member Only
                                            if config.chpay
                                                span 
                                                    span.smallFont ￥
                                                    span 99990.
                                                    span.smallFont 00
                                            else if config.vnpay
                                                span 
                                                    span 99990.00
                                                    sup.smallFont ₫ 
                                            else if !config.afterLogin
                                                span= config.membership
                                    else if config.vip && !config.membership
                                        .c-price__flag--vip
                                            span.flag VIP Price
                                            if !config.afterLogin
                                                span= config.vip
                            if(config.lumpsum)
                                +priceBox
                                    // 일시불 할인 문구
                                    // - BR만 사용(MX 추가될 예정) 
                                    // - Checkout page에서 일시불을 선택하는 경우 5% 할인을 해주는 내용을 표시
                                    // - Brazil E-commerce 시장에서 공통적으로 적용되는 특이사항으로 마켓 poilicy
                                    // - 5% 할인 가격은 OBS B2C, B2E, B2B2C 가격 기준에서 5% 할인가격으로 OBS로부터 수신 받아야 함 (Membership 할인 가격에서의 5% 할인가는 아님) 
                                    // - 표시되는 문구는 Data 값과 Front 문구를 조합하여 관리됨 ex) à vista 5% off {data}
                                    // - Click interaction : 없음
                                    .product-price
                                        .c-price
                                            .c-price__otherinfo= config.lumpsumTxt
                                        .c-price
                                            if (config.priceValueBold)
                                                .c-price__discount.font-semibold
                                                    span= config.priceValue
                                            else 
                                                .c-price__discount
                                                    span= config.priceValue
                            if(config.brNopix)
                                +priceBox
                                    //BR 에서 사용
                                    .product-price
                                        .c-price
                                            .c-price__otherinfo.font-semibold= config.brNopixTxt
                            if(config.plInfoTxt)
                                +priceBox
                                    // 30일 이내 최저가격 표시
                                    // - PL만 사용 
                                    // - 적용되는 국가의 Online판매 관련 법에 따라 OBS 연동 Model들에 한해 30일 이내 최저가격을 표기
                                    // - OBS에서 30일 이내 최저가격 계산하여 API로 전달됨 (DB Column 명 : obs_lowest_price) 
                                    // - obs_group 회원 등급에 따라 B2C lowest price 데이터 노출 (VIP Price)
                                    // - Admin 설정에 따라 표시 유/무 결정됨
                                    // - Click interaction : 없음
                                    // - 표시되는 문구는 Data 값과 Front 문구를 조합하여 관리됨 ex) Nejnižší cena za posledních 30 dní {data}
                                    .product-price
                                        .c-price
                                            .c-price__otherinfo Nejnižší cena za posledních 30 dní : 
                                                span NN NNN Kč
                            if config.outOfStock || config.soldOut
                                .price-box
                                    if config.outOfStock
                                        .c-price__flag--notice
                                            span Out of stock
                                    if config.soldOut
                                        .c-price__flag--notice
                                            span Sold out
                            if(config.ehf)
                                +priceBox
                                    // EHF 세금
                                    // - CA만 사용 
                                    // - 환경 처리 수수료(EHF)는 구매하는 품목의 재활용 비용을 반영한 값
                                    // - 수수료 산정은 각 Category 및 Size별로 하기 Page에 따릅니다. https://recyclemyelectronics.ca/bc/residential/environmental-handling-fee-ehf/ (Admin 기입방식인지 자동 Mapping되는지 확인 필요 - OBS)
                                    // - Click interaction : 없음
                                    .product-price
                                        .infoTooltipWrap 
                                            .c-price__plus Environmental Handling Fee(EHF)
                                            .infoTooltipArea
                                                button.btnInfoTooltip 
                                                    span.hidden Infomation 
                                                .infoTooltipNote Please note, the EHF fee associated with this item is based on the delivery address postal code. For more details on the EHF fee visit.
                                                    .linkMore
