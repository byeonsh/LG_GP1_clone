mixin product_price(params)
    - var options = {limited: false, retailerFontStyle : null, ...params}
    - var priceStyle = options.priceFontStyle || "font-w-semibold-24 font-m-semibold-24"
    - var subPriceStyle = options.subPriceFontStyle || "font-w-normal-14i font-m-normal-14i"
    - var soldOutStyle = options.soldOutFontStyle || "font-w-semibold-20 font-m-semibold-20"
    - var retailerStyle = options.retailerFontStyle || "font-w-semibold-16 font-m-semibold-14"
    .price-area
        if options.promotion
            .price-box(class=`${subPriceStyle}`)
                .c-price__flag--promotion
                    span= options.promotion
        if  options.limited || options.vip
            // 2023-01-13 change html for vip price and limited quantities
            .price-box(class=`${subPriceStyle}`)
                if options.vip
                    .c-price__flag--vip
                        span VIP Price
                if options.limited
                    .c-price__flag--limited
                        span It's a limited product so you should hurry!
                            //- span.qty 19
        if !options.retailer && options.installment
            .price-box(class=`${subPriceStyle}`)
                .c-price
                    .c-price__installment.c-product-item__button
                        // 2023-01-27 : Add role for tagging
                        a(href="#" role="button") £699.99/mo for 3 mos at 0% or
        if !options.retailer
            .price-box
                .product-price
                    .c-price
                        .c-price__price 
                            span Ab 
                    .c-price
                        del.c-price__previous 
                            span €7,4990.00
                    .c-price
                        .c-price__discount 
                            span 33% Rabatt
            .price-box
                .c-price(class=`${priceStyle}`)
                    .c-price__purchase £1,499.98
                    //RO CN
                    .c-price__purchase 
                        span.smallFont ￥
                        span 99990.
                        span.smallFont 00
                    //RO VN
                    .c-price__purchase
                        span 11.990.000
                        sup.smallFont ₫
                if !options.retailer && options.membership
                    .product-price(class=`${subPriceStyle}`)
                        .c-price__flag--member
                            span.flag Members only
                            span= options.membership
        if !options.onlyPurchase
            .price-box(class=`${subPriceStyle}`)
                .c-price
                    del.c-price__previous £2,199.98
                .c-price
                    if (options.discount)
                        .c-price__discount
                            span= options.discount
                    else
                        .c-price__discount
                            span Save
                            span £2,199.98
                .c-price
                    span £2,199.98 
        if options.cashDiscount
            // RO only BR
            .price-box.cash_discount
                .product-price
                    .c-price
                        .c-price__otherinfo à vista 5% off
                    .c-price
                        .c-price__discount 
                            span R£1,959.98
        if options.lowPrice30Days
            // RO only CZ,PL
            .price-box.low_price_30_days
                .product-price
                    .c-price
                        .c-price__otherinfo Nejnižší cena za posledních 30 dní :
                    .c-price
                        .c-price__discount 
                            span NN NNN Kč
        if options.ehf
            .price-box
                .infoTooltipWrap 
                    .c-price__plus Plus $15.50 EHF
                    .infoTooltipArea
                        button.btnInfoTooltip 
                            span.hidden Infomation 
                        .infoTooltipNote Please note, the EHF fee associated with this item is based on the delivery address postal code. For more details on the EHF fee visit.
                            .linkMore
                                a Learn More    
                            span.bottomArrow
                            button.btnClose 
                                span.hidden close
        if options.outOfStock || options.soldOut
            // 2023-01-13 class changed for font size in sold out, out of stock
            .price-box(class=`${soldOutStyle}`)
                if options.outOfStock
                    .c-price__flag--notice
                        span Out of stock
                if options.soldOut
                    .c-price__flag--notice
                        span Sold out
        if options.retailer
            .price-box(class=`${retailerStyle}`)
                .c-price__flag--retail See Retailer for Pricing

mixin product_cta(params)
    - var options = {use2ndOnly : false, custom2ndBtn : {}, ...params}
    - var defaultButtonName = (options.whereToBuy) ? "Where to Buy" : "Learn More"
    - var pdpButtonName = "Buy Now"
    .cta-wrap
        //- 1st button
        if(!options.use2ndOnly)
