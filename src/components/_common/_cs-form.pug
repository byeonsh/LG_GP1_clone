//- TEXTAREA
mixin csForm_Textarea(params)
    - var option = {...params}
    - var className = `${option.class} font-m-normal-14 font-w-normal-14 c-message-valid`

    if option.require == "true"
        label(for=`${option.id}` id=`${option.id}-label`).font-m-normal-16.font-w-normal-16 #{option.label} #[em.require *]#[span.sr-only Required Field]
        .c-textarea-box.c-input-item
            textarea(id=`${option.id}` required="required" aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` class=`${className}` aria-describedby=`aria-${option.id}-error-connection countDesc` aria-live="polite" aria-atomic="false")
            p.font-m-normal-24.font-w-normal-16(id="countDesc" aria-live="polite")
                span.counting-num 0
                span / #{option.maxLength} Characters
        .c-warning.c-responsavel-required(id=`aria-${option.id}-required`) #{option.requireMsg}
    else 
        label(for=`${option.id}`).font-m-normal-16.font-w-normal-16 #{option.label}
        .c-textarea-box.c-input-item
            textarea(id=`${option.id}` aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` class=`${className}` aria-describedby=`aria-${option.id}-error-connection`)
            p.font-m-normal-24.font-w-normal-16.counting-num(id="countDesc" aria-live="polite") 
                span.counting-num 0 
                span / #{option.maxLength} Characters
        .c-warning.c-responsavel-required(id=`aria-${option.id}-required`) #{option.requireMsg}

