//- INPUT TYPE
mixin csForm_Input(params)
    - var option = {...params}
    - var className = `${option.class} textInput__input field__input font-m-normal-16 font-w-normal-20 c-subject-valid`
    //- type01 
    if option.require == "true" 
        label(for="subject" id=`${option.id}-label`).font-m-normal-16.font-w-normal-16 #{option.label} #[em.require *]#[span.sr-only Required Field]
        span.fieldIcons__root
            span.fieldIcons__input
            label(for=`${option.id}`).sr-only Search
            if option.value
                input(id=`${option.id}` type=`${option.type}` value=`${option.value}` aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` class=`${className}` aria-describedby=`aria-${option.id}-error-connection` required="required")
            else if option.value && option.disabled == "true"
                input(id=`${option.id}` type=`${option.type}` value=`${option.value}` disabled="disabled" aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` class=`${className}` aria-describedby=`aria-${option.id}-error-connection` required="required")
            else if option.disabled == "true"
                input(id=`${option.id}` type=`${option.type}` disabled="disabled" aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` aria-describedby=`aria-${option.id}-error-connection` class=`${className}`)
            else
                input(id=`${option.id}` type=`${option.type}` aria-labelledby=`${option.id}-label` placeholder=`${option.placeholder}` class=`${className}` aria-describedby=`aria-${option.id}-error-connection` required="required")
            button(type="button").c-button-delete delete button
        // error message
        if option.info == "true"
            .c-info-msg(id=`aria-${option.id}-msg`) #{option.infoMsg}
            .c-warning.c-subject-required(id=`aria-${option.id}-required`) #{option.requireMsg}
            .c-warning.c-subject-invalid(id=`aria-${option.id}-invalid`) #{option.invalidMsg}

        else
            .c-warning.c-subject-required(id=`aria-${option.id}-required`) #{option.requireMsg}
