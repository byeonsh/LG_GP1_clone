mixin csForm_Captcha(params)
    - var option = {...params}
    - var className = `${option.class} font-m-normal-14 font-w-normal-14 c-message-valid`

    label(for="captcha").font-m-normal-16.font-w-normal-16 #{option.label} #[em.require *]#[span.sr-only Required Field]
    .cs-form__inner.cs-captcha
        .cs-captcha__area
            // captcha area. 
        .cs-captcha__input-box 
            .cs-captcha__input
                label(for=`${option.id}`).font-m-normal-16.font-w-normal-16 pictureText #[em.require *]#[span.sr-only Required Field]
                input(id=`${option.id}` type="text" required="required" aria-label="" placeholder=`${option.placeholder}`).font-m-normal-16.font-w-normal-20.c-captcha-valid
        .cs-captcha__button 
            button(type="button" aria-label="").cs-captcha__button--sound
            button(type="button" aria-label="").cs-captcha__button--reset
    .c-warning.c-captcha-required #{option.requiredMsg}
    if option.incorrect
        .c-warning.c-captcha-incorrect #{option.incorrect}
        
