//- 믹스인 수정 시, 기존에 개발에 전달했던 페이지의 마크업이 달라지지 않도록 주의 부탁 드립니다. 

mixin dateCountDown(option=false, $countDownDate = "25 December 2023 17:30:00", fontStyle = false)
    - var amountStyle = fontStyle = true ? fontStyle : "font-w-normal-32 font-m-normal-20"

    if (option == "bigCountDownType")
        .text.c-text-contents__date-countdown.c-countdown(data-countdown-date=$countDownDate)&attributes(attributes).c-countdown--big
            .cmp-text(data-cmp-data-layer="")
                span.c-countdown__amount-area
                    span.c-countdown__amount.days 00
                    span.c-countdown__amount.period Days
                span.c-countdown__amount-area
                    span.c-countdown__amount.hours 00
                    span.c-countdown__amount.period Hours
                span.c-countdown__amount-area
                    span.c-countdown__amount.minutes 00
                    span.c-countdown__amount.period Minutes
                span.c-countdown__amount-area
                    span.c-countdown__amount.seconds 00
                    span.c-countdown__amount.period Seconds
    else
        .text.c-text-contents__date-countdown.c-countdown(data-countdown-date=$countDownDate)&attributes(attributes)
            span.cmp-text(data-cmp-data-layer="" class=`${amountStyle}`)
                span.c-countdown__amount.days(aria-label="days") 00
                span.c-countdown__amount.hours(aria-label="hours") 00
                span.c-countdown__amount.minutes(aria-label="minutes") 00
                span.c-countdown__amount.seconds(aria-label="seconds") 00

