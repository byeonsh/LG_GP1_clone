//- 믹스인 수정 시, 기존에 개발에 전달했던 페이지의 마크업이 달라지지 않도록 주의 부탁 드립니다. 

mixin pagination()
    .c-page(role="navigation" aria-label="Pagination" data-aria-pattern="Page #")
        //- button(type="button" class="c-page__action c-page__action--first" aria-label="First page")
        //-     span.sr-only First page
        button(type="button" class="c-page__action c-page__action--prev" aria-label="Previous page" disabled='disabled')
            span.sr-only Prev
        - var n = 1;
        ul.c-page__list
            while n < 6
                li(class=`c-page__item`)
                    button(type="button" class=`c-page__link${n==1 ? ` c-page__link--active` : ``}` aria-label=`Page ${n}` aria-current=`${n==1 && `page`}`)= n++
        button(type="button" class="c-page__action c-page__action--next" aria-label="Next page")
            span.sr-only Next
        //- button(type="button" class="c-page__action c-page__action--last" aria-label="Last page")
        //-     span.sr-only Last page

mixin paginationFraction()
    .c-pagination(role="navigation" aria-label="Pagination" data-aria-pattern="Page #")
        button(type="button" class="c-pagination__action c-pagination__action--prev" aria-label="Previous page" disabled)
            span.sr-only Prev Page
        - var n = 1;
        .c-pagination__fraction
            span(aria-label=`Page ${1}` aria-current=`${1 && `page`}`).c-pagination__current 1
            | /
            span(aria-label=`Page ${5}` aria-current=`${1 && `page`}`).c-pagination__current 5

        button(type="button" class="c-pagination__action c-pagination__action--next" aria-label="Next page")
            span.sr-only Next Page
            