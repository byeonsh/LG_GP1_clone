extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_headline.pug
include ../_common/_carousel.pug
include ../_common/_pagination.pug
include ../_common/_forms.pug

block meta 
    - var componentId = "PD0013"
    - var componentName = "PDP Find a Dealer "
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")

block content
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-pd.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                        ],
                    };

    mixin locationItem(index)
        .c-find-a-dealer-locations__item&attributes(attributes)
            .c-pin
                .c-pin-num #{index}
            .c-dealer
                ul.c-icon-list.black-icon
                    li.icon-sales
                    li.icon-install
                    li.icon-service
                dl.c-dealer-box
                    // GA4
                    dt.font-w-normal-16.font-m-normal-16 #[a(href="" data-item="" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") LightWerks]
                    dd.font-w-normal-16.font-m-normal-16.category MONITOR
                    dd.font-w-normal-16.font-m-normal-14.address 3331 Jack Northrop Ave, Hawthorne, CA
                    // GA4
                    dd.font-w-normal-16.font-m-normal-14 #[a(href="tel:4246752600" role="button") (424) 675-2600]
                    // GA4
                    dd.font-w-normal-16.font-m-normal-14 #[a(href="mailto:SouthBay@LightWerks.com" role="button") SouthBay@LightWerks.com]
                    dd
                        .button
                            +defaultButton({
                                name: "View on map",
                                wSize : "small",
                                mSize : "small",
                                buttonStyle : "default",
                                isButton : true
                            })

    mixin search-box
        - var headStyle = "font-w-light-56 font-m-light-28"
        - var bodyStyle = "font-w-normal-24 font-m-normal-12"

        // block : search box
        .c-search-box
            .c-text-contents.c-search-box__header
                .c-text-contents__headline
                    +headline(headStyle, "h2", "Find a Dealer")
                .c-text-contents__bodycopy(class=bodyStyle) 
                    | Find a dealer helping your sales, installation and after-sales service.

            //- element : .c-search-box__body(--multi, --double)
            .c-search-box__body.c-search-box__body--double
                //- element : c-search-box__form
                .c-search-box__form
                    +formSelect("Business Unit", "businessUnit", "Select a Product", false, false, false)
                        option(value="") Select All
                        option(value="displays") Commercial Displays
                        option(value="solar") Solar
                    +formText('text', 'Search by Address', 'searchAddress', false, 'Enter your city or address', false, false, false)
                .button.c-search-box__button
                    +defaultButton({
                        name : "Search",
                        wSize : "medium",
                        mSize : "small",
                        buttonStyle : "highlight",
                        isButton : true,
                    })(type="submit")

    mixin list-legend 
        - var fontStyle = "font-w-normal-16 font-m-normal-14"
        - var iconStyle = "white-icon"
        .c-find-a-dealer-information
            ul.c-icon-list(class=iconStyle class=fontStyle)
                li.icon-sales Sales
                li.icon-install Install
                li.icon-service Service
            .button
                button(type="button" aria-expanded="false").c-find-a-dealer-information__toggle
                    span.sr-only Collapse
                    span.sr-only Expand

    mixin no-data
        - var headStyle = "font-w-normal-24 font-m-normal-20"
        - var bodyStyle = "font-w-normal-16 font-m-normal-16"

        //- There is no data
        .c-find-a-dealer-empty
            .icon-empty
            .c-text-contents
                .title.c-text-contents__headline 
                    .cmp-title(data-cmp-data-layer="" class=headStyle)
                        h4.cmp-title__text There is no data.
                    //- +headline("font-w-semibold-20 font-m-semibold-20", "h4", "There is no data.")
                .text.c-text-contents__bodycopy
                    .cmp-text(data-cmp-data-layer="" class=bodyStyle)
                        p Please retry to enter zip code

    //- Type 1. default
    .guide-text-type Type1. Default
    .c-wrapper.PD0013.margin-top.margin-bottom.bg-default
        .component
            .cmp-container
                .c-find-a-dealer
                    +search-box
                    //- map contents
                    .c-find-a-dealer-inner
                        .c-find-a-dealer-body
                            .c-find-a-dealer-map
                                .c-map
                                    //- API... Google map
                                .c-pin.is-active
                                    .c-pin-num 1
                                .c-find-a-dealer-map__modal
                                    .button
                                        button(type="button").c-find-a-dealer-map__modal--close 
                                            span.sr-only Close
                                    .c-dealer
                                        ul.c-icon-list.black-icon
                                            li.icon-sales
                                            li.icon-install
                                            li.icon-service
                                        dl.c-dealer-box
                                            // GA4
                                            dt.font-w-normal-20.font-m-normal-16 #[a(href="#" data-item="" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") LightWerks]
                                            dd.font-w-normal-20.font-m-normal-16.category MONITOR
                                            dd.address 3331 Jack Northrop Ave, Hawthorne, CA
                                            // GA4
                                            dd.phone #[a(href="tel:4246752600" role="button") (424) 675-2600]
                                            // GA4
                                            dd.email #[a(href="mailto:SouthBay@LightWerks.com" role="button") SouthBay@LightWerks.com]
                                            // GA4
                                            dd.font-w-normal-16.font-m-normal-14i.font-underline #[a(href="www.lightwerks.com" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") www.lightwerks.com]                                          

                            .c-find-a-dealer-list
                                +list-legend 

                                .c-find-a-dealer-locations
                                    //- List
                                    .c-find-a-dealer-locations__list
                                        each index in [1,2,3,4,5,6,7]
                                            - var active = 1 == index 
                                            +locationItem(1)(class={"is-active" : active})
                                    +paginationFraction

    .guide-text-type Type2. No Data
    .c-wrapper.PD0013.margin-top.margin-bottom.bg-default
        .component
            .cmp-container
                .c-find-a-dealer
                    +search-box

                    .c-find-a-dealer-inner
                        .c-find-a-dealer-body
                            .c-find-a-dealer-map
                                .c-map
                                    //- Google map
                            .c-find-a-dealer-list
                                +list-legend

                                .c-find-a-dealer-locations
                                    +no-data
