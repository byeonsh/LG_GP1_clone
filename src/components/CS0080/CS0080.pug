    mixin notice(params)
        - var option = {describedby:'notice-1', ...parmas}
        .carousel.panelcontainer
            .cmp-carousel.swiper.c-carousel(data-cmp-data-layer="")
                .cmp-carousel__content.swiper-wrapper
                    +galleryItem2(slideContentsList)

            .c-carousel__handler
                .cmp-carousel__actions
                    +carouselBtn({type:"pagination", direction:"prev", describedby:option.describedby})(role="prev button")
                +carouselPagination({isUnder:true})
                .cmp-carousel__actions
                    +carouselBtn({type:"pagination", direction:"next", describedby:option.describedby})(role="next button")
                .btn-wrapper 
                    button(type="button" role="button").auto-start start 
                    button(type="button" role="button").auto-stop stop
    
