    .guide-text-type Type1.
    .c-wrapper.CS0061.type-text
        // 20230316 full markup change
        .component.type-default
            .CS0061__container
                .c-image-banner 
                    .c-image-banner__bg 
                        //- +printLazyPicture('https://via.placeholder.com/336x140/222/333', 'https://via.placeholder.com/1440x304/222/333')
                        +printLazyPicture('../../mocks/CS0061/temp-right-to-repair.jpg', '')
                    .c-image-banner__content 
                        .c-image-banner__content-text
