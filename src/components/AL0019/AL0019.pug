extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_carousel.pug
include ../_common/_headline.pug
include ../_common/_title-area.pug

block meta 
    - var componentId = "AL0019"
    - var componentName = "About LG"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block content
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-st.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Top margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                ]
                            },
                            {
                                'name' : 'Bottom margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                        ],
                    };

    mixin AL0019lList (param)
        - var size_pc = "708x472";
        - var size_mo = "310x206";
        each data in param 
            div.c-list__item
                .c-list__item__img
                    +printLazyPicture(
                            `https://via.placeholder.com/${size_mo}`, 
                            `https://via.placeholder.com/${size_pc}`
                        )
                .title.c-text-contents-title.c-businessList--video-list__item--title
                    strong.cmp-title.font-w-normal-32.font-m-normal-20(data-cmp-data-layer="")= data.titleName
                .topic-box
                    .topic.c-text-contents-topic.c-businessList--video-list__item--topic
                        span.cmp-topic.font-w-normal-16.font-m-normal-16(data-cmp-data-layer="")= data.bodyCopy
                    .button
                        +textButton({name: 'See Jobs', wSize: 'small', mSize: 'small', buttonStyle: 'default', isButton: true})(data-link-destination="" data-link-name="see_jobs" data-link-menu="" data-link-page-type="")

    .c-wrapper(class=componentId)
        .component
            .cmp-container
                +component-title-area({
                    headline : {
                        text : "Career Profiles",
                    }
                })(class="")
            .cmp-container
                .c-list
                    +AL0019lList([
                        {
                            titleName: "R&D",
                            bodyCopy: "LG Electronics' R&D division is responsible for many key disciplines, including advanced research, product plans, designs, standards and patents, and R&D planningâ€”to name but a few.",
                        },
                        {
                            titleName: "Production",
                            bodyCopy: "LG Electronics' production division is responsible for product manufacturing, production planning and management, production technologies, product-quality management, and other production-related jobs.",
                        },
                        {
                            titleName: "Marketing",
                            bodyCopy: "LG Electronics' marketing division is responsible for domestic and overseas marketing and sales, marketing planning, product planning, customer service, and other jobs related to product sales and services.",
                        },
                        {
                            titleName: "Support",
                            bodyCopy: "LG Electronics' support division is responsible for formulating the company's policies and business direction, and supporting its R&D, production, and marketing divisions. ",
                        },
                    ])