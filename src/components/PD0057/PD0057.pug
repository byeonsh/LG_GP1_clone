extends ../_common/_layout.pug
include ../_common/_index.pug
include ../_common/_headline.pug
include ../_common/_title-area.pug
include ../_common/_forms.pug

block meta 
    - var componentId = "PD0057"
    - var componentName = "Find a all store"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")
    link(rel="stylesheet", href="../../components/CM0001/CM0001.css")
    link(rel="stylesheet", href="../../components/CM0002/CM0002.css")
    link(rel="stylesheet", href="../../components/CM0007/CM0007.css")

block scripts
    script(src=componentId+".js" type="module")
    script(src="../../components/CM0001/CM0001.js" type="module")
    script(src="../../components/CM0002/CM0002.js" type="module")
    script(src="../../components/CM0007/CM0007.js" type="module")

block content
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-pd.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                        ],
                        '.store-search-result' : [
                            {
                                'name' : 'Store list active',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'list-active'}
                                ]
                            },
                        ],
                    };

    include ../CM0001/CM0001-inc.pug
    +CM0001

    include ./PD0057-inc.pug
    .guide-text-option Find a all store
    +PD0057('All store')

    include ../../components/CM0007/CM0007-inc.pug
    +CM0007
    
block footer
    include ../../components/CM0002/CM0002-inc.pug
    +CM0002
