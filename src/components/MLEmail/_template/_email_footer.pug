//- Mixins
mixin email-footer()
    tr
        td(style='padding-top:40px')
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='width:100%;')
                tr
                    td(align='center')
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='open in a new tab' style=`${iconLink}`)
                            img(src='../../assets/image/email/ico_facebook.png' alt='facebook' width='32' height='32' border='0')
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='open in a new tab' style=`${iconLink}`)
                            img(src='../../assets/image/email/ico_X.png' alt='X' width='32' height='32' border='0')
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='open in a new tab' style=`${iconLink}`)
                            img(src='../../assets/image/email/ico_instagram.png' alt='instagram' width='32' height='32' border='0')
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='open in a new tab' style=`${iconLink}`)
                            img(src='../../assets/image/email/ico_youtube.png' alt='youtube' width='32' height='32' border='0')
                tr
                    td(align='center' style=`${footerAddress}`)
                        | LG Electronics U.K. Limited
                        br
                        | office: Velocity 2, Brooklands Drive, Weybridge, KT13 0SL.
                        br
                        | registration number 02143888
                tr
                    td(align='center' style='padding-top:20px;')
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='Open in a new tab' style=`${footerLink1}`) Unsubscribe
                        span(style='display:inline-block;font-family:Arial;font-size:14px;padding:0 12px;color:#cbc8c2;vertical-align:2px;') |
                        a(href='https://www.lg.com/uk/' target='_blank' rel='noreferrer noopener' title='Open in a new tab' style=`${footerLink1}`) Privacy Policy
                tr
                    td(align='center' style='padding-top:40px;')
                        img(src='../../assets/image/email/logo_lifes_good.png' alt="Life's Good" width='142' height='25' border='0')


