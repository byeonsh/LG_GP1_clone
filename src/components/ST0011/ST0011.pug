        .component.type-left-right.middle
            .cmp-container
                // block : list
                +imageList('384x408','370x324','animation')
                +text-contents
    .guide-text-option Option. Font Size : Small / With image
    .c-wrapper.ST0011.margin-top.margin-bottom.place-text-left
        .component.type-left-right.small
            .cmp-container
                // block : list
                +imageList('384x408','370x324','image')
                +text-contents

    