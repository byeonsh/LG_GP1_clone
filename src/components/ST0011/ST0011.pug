    // Component Markup

    mixin text-contents
            // block : text-contents   
            .c-compare-image__text-area.c-text-contents.align-left
                .text.c-text-contents__eyebrow
                    .cmp-text(data-cmp-data-layer="") 
                        p August 16 - October 15, 2020
                .title.c-text-contents__headline.font-w-light-56
                    .cmp-title(data-cmp-data-layer="")
                        strong Heading can be up to 60 characters lorem ipsum dolor sit amet.
                .text.c-text-contents__bodycopy
                    .cmp-text(data-cmp-data-layer="") 
                        p Body text can be up to 350 characters. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla
                // block :cta 
                .button.c-cta
                    +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                    +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'highlight', isButton: false})
                .button.c-cta
                    +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                    +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
    mixin image(size1, size2)
        // block : image
        .image.c-image
            +printLazyPicture(`https://via.placeholder.com/${size1}/999999/333333`, `https://via.placeholder.com/${size2}/999999/333333`)
            if block
                block

    mixin video-contents(size1, size2)
            // block : media contents
            .c-media-contents
                // Video case
                +image(size1, size2)
                    +floating-video("brightcove")
                        .text.c-media__titlecopy
                            .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="") 
                                p Lorem ipsum dolor sit, amet consectetur adipisicing elit.

    mixin ani-contents(size1, size2)
            // Animation case
            +image(size1, size2)
                .desktop-only
                    +bg-video
                .mobile-only
                    +bg-video

    mixin img-contents(size1, size2)
        +image(size1, size2)
    mixin imageList(size1, size2, type, withMedia = true)
        ul.c-list
            - for (var x = 0; x < 2; x++)
                li.c-list__item
                    if withMedia
                        // Please enter class according to the media type : with-animation or with-image
                        .c-compare-image__inner(class=`${type == 'animation' ? `with-animation` : `with-image`}`)
                            .c-compare-image__text-inner.c-text-contents.pos-top.pos-left
                                .text.c-text-contents__bodycopy.font-white.align-left
                                    .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                                        if x == 0
                                            p Lorem ipsum dolor sit, amet consectetur adipisicing elit. Praesentium cupiditate vitae debitis laudantium placeat.
                                        else
                                            p Lorem ipsum dolor sit, amet consectetur.
                            if type == 'animation'
                                +ani-contents(size1, size2)
                            if type == 'image'
                                +img-contents(size1, size2)
                    
                    .c-compare-image__text-bottom.c-text-contents.bg-black
                        .text.c-text-contents__bodycopy.align-left
                            .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="") 
                                p Lorem ipsum dolor sit amet, consectetur adipiscing elit u

    .guide-text-type TYPE1. Text Overlay
    .guide-text-option Option. Animation
    .c-wrapper.ST0011.margin-top.margin-bottom
        .component.type-overlay
            .cmp-container
                // block : compare image
                .c-compare-image
                    // block : list
                    +imageList('384x576','800x700','animation')
    .guide-text-option Option. With image
    .c-wrapper.ST0011.margin-top.margin-bottom
        .component.type-overlay
            .cmp-container
                // block : compare image
                .c-compare-image
                    // block : list
                    +imageList('384x576','800x700','image')
    .guide-text-option Option. without image
    .c-wrapper.ST0011.margin-top.margin-bottom
        .component.type-overlay
            .cmp-container
                // block : compare image
                .c-compare-image
                    // block : list
                    +imageList('384x576','800x700','animation',false)

    // Type2. Side Image 2
    .guide-text-type TYPE2. Left Right Text
    .guide-text-option Option. Font Size : Large / Animation
    .c-wrapper.ST0011.margin-top.margin-bottom.place-text-left
        .component.type-left-right.large
            .cmp-container
                // block : list
                +imageList('384x408','370x324','animation')
                +text-contents
    .guide-text-option Option. Font Size : Middle / Animation
