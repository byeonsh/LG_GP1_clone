extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_headline.pug
include ../_common/_hero-banner.pug
include ../_common/_carousel.pug
include ../_common/_title-area.pug

block meta 
    - var componentId = "AL1"
    - var AL0021 = "AL0021"
    - var AL0022 = "AL0022"
    - var CM0007 = "CM0007"
    - var componentName = "About LG"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")
    link(rel="stylesheet", href=`../${AL0021}/${AL0021}`+".css")
    link(rel="stylesheet", href=`../${AL0022}/${AL0022}`+".css")
    link(rel="stylesheet", href=`../${CM0007}/${CM0007}`+".css")
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")
    script(src=`../${AL0021}/${AL0021}`+".js" type="module")
    script(src=`../${AL0022}/${AL0022}`+".js" type="module")
    script(src=`../${CM0007}/${CM0007}`+".js" type="module")
    

block content

    mixin hero-cta(type = "box")
        case type
            when "text"
                // block : cta
                .button.c-cta
                    +textButton({name: 'Button Text', wSize: 'medium', mSize: 'medium', buttonStyle: 'default transparent white', isButton: false})
                    +textButton({name: 'Button Text', wSize: 'medium', mSize: 'medium', buttonStyle: 'default transparent white', isButton: false})
            when "box"
                // block : cta
                .button.c-cta
                    // 23.02.14 - changed markup
                    +defaultButton({name: 'Learn More', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})(data-link-name="learn_more" data-link-destination="" data-link-menu="" data-link-page-type="")
            default 
                |
    mixin carousel-item-component(id, set) 
        .c-wrapper(class=`${id}`)&attributes(attributes)
            .component
                .cmp-container
                    +hero-banner-case-select(set)

    mixin carousel-nested-component(id, type = "", itemOption)
        .carousel.panelcontainer
            // block : carousel
            .cmp-carousel.swiper.c-carousel(data-cmp-autoplay="autoplay" data-cmp-data-layer="")&attributes(attributes)
                .cmp-carousel__content.swiper-wrapper
                    - for (var i=0; i < itemOption.length; i++)
                        - var set = itemOption[i]
                        .cmp-carousel__item.swiper-slide.c-carousel__item(data-cmp-data-layer="" data-cmp-hook-carousel="item" data-title="Multi Door Fridge Freezers")
                            +carousel-item-component(id, set)(class=`${type}`)
                +hero-controls

    .c-wrapper.ST0048.margin-top(class=componentId)
        .component
            .cmp-container
                // "margin-top", "margin-bottom" is unnecessary
                +carousel-nested-component("ST0055", "type-image", [
                    {caseSelect : "image", width : "wide", heroType : "image", dateType : "none", useEyebrow : true, cta : "box", ctaSecond: false, textAlign : "left", headline : "To create a better life you deserve", bodycopy : "We aim to be a company that works together for a better future."},
                    {caseSelect : "image", width : "wide", heroType : "image", dateType : "none", useEyebrow : true, cta : "box", ctaSecond: false, textAlign : "left"},
                    {caseSelect : "image", width : "wide", heroType : "image", dateType : "none", useEyebrow : true, cta : "box", ctaSecond: false, textAlign : "left"},
                    {caseSelect : "image", width : "wide", heroType : "image", dateType : "none", useEyebrow : true, cta : "box", ctaSecond: false, textAlign : "left"}
                ])(class="dark-theme autoplay")
                
    //- AL0021
    mixin swiperList (param)
        - var size_pc = "464x300";
        - var size_mo = "310x206";
        each data in param 
            div.cmp-carousel__item.swiper-slide.c-list__item
                .c-list-item__img
                    +printLazyPicture(
                        `https://via.placeholder.com/${size_mo}`, 
                        `https://via.placeholder.com/${size_pc}`
                    )
                .c-list-item__contents.c-text-contents 
                    .title.c-text-contents__title
                        strong.cmp-title.font-w-light-36.font-m-light-24(data-cmp-data-layer="")= data.titleName
                    .text.c-text-contents__bodycopy
                        p.cmp-text.font-w-normal-24.font-m-normal-16(data-cmp-data-layer="")!= data.bodyCopy
                    //- +linkButton({type:"box-outlined", color:"black", size:"medium", name: "LEARN MORE"})
                    +defaultButton({name: 'Learn More', wSize: 'medium', mSize: 'small', buttonStyle: 'default transparent', isButton: false})(data-link-name="learn_more" data-link-destination="" data-link-menu="" data-link-page-type="")

    mixin handler                           
        .c-carousel__handler
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"prev"})
            +carouselPagination
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"next"})

    .c-wrapper.margin-top.margin-bottom(class=AL0021)
        .component
            .cmp-container
                +component-title-area({
                    headline : {
                        text : "Everything About LG"
                    }
                })
                //- //- block : text-contents
                //- .c-text-contents
                //-     .title.c-text-contents__headline
                //-         // 2022-11-18 change the default font size
                //-         h1.cmp-title.font-w-semibold-40.font-m-semibold-26(data-cmp-data-layer="") Everything About LG
                .c-stock-list
                    //- +contentsList({num:'3',headline:'font-w-semibold-32 font-m-semibold-24',bodycopy:'font-w-normal-16 font-m-normal-16'})
                    .carousel.panelcontainer
                        // block - carousel
                        .cmp-carousel.swiper.c-carousel(data-cmp-data-layer="")
                            .cmp-carousel__content.swiper-wrapper.c-list
                                +swiperList([
                                    {
                                        titleName: "Career",
                                        bodyCopy: `LG Electronics allows you to realize your dreams and offers the "Right People" great opportunities for growth.`,
                                    },
                                    {
                                        titleName: "Press & Media",
                                        bodyCopy: `View PR films and ads, read press releases, download information, and get in touch with one of LG's Media Contacts.`,
                                    },
                                    {
                                        titleName: "Sustainability",
                                        bodyCopy: `Enhancing your life with LG's products comes with great values, benefits, promise and personality.`,
                                    },
                                ])
                            +handler 

    mixin globalList (param)
        - var size_pc = "80x80";
        - var size_mo = "64x64";
        each data in param 
            div.cmp-carousel__item.swiper-slide.c-list__item(class=`${param.length >= 4 ? 'c-list__item--four' : ''}`)
                .c-list-item__contents.c-text-contents
                    .title.c-text-contents__title
                        strong.cmp-title.font-w-light-36.font-m-normal-20(data-cmp-data-layer="")= data.titleName
                    .text.c-text-contents__bodycopy
                        p.cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")!= data.bodyCopy
                    //- +linkButton({type:"box-outlined", color:"black", size:"small", name: "LEARN MORE"})
                    +linkButton({type:"text",color:"black", underline:false,comment:false, outlink:true, name: "LEARN MORE"})(target='_blank' data-link-name="learn_more" data-link-destination="" data-link-menu="" data-link-page-type="")
                .c-list-item__img
                    +printLazyPicture(
                        `https://via.placeholder.com/${size_mo}`, 
                        `https://via.placeholder.com/${size_pc}`
                    )

    .c-wrapper.margin-bottom(class=AL0022)
        .component
            .cmp-container
                +component-title-area({
                    headline : {
                        text : "More from Global"
                    }
                })
                //- //- block : text-contents
                //- .c-text-contents
                //-     .title.c-text-contents__headline
                //-         // 2022-11-18 change the default font size
                //-         h1.cmp-title.font-w-semibold-40.font-m-semibold-26(data-cmp-data-layer="") More from Global
            .cmp-container
                .carousel
                    //- +contentsList({num:'3',headline:'font-w-semibold-32 font-m-semibold-24',bodycopy:'font-w-normal-16 font-m-normal-16'})
                    .cmp-carousel.swiper.c-carousel(data-cmp-data-layer="")
                        .cmp-carousel__content.swiper-wrapper.c-list
                            +globalList([
                                {
                                    titleName: "Global LG",
                                    bodyCopy: `Lorem ipsum dolor sit amet, consectetur adipiscing elit.`,
                                },
                                {
                                    titleName: "ESG",
                                    bodyCopy: `Lorem ipsum dolor sit amet, consectetur adipiscing elit.`,
                                },
                                {
                                    titleName: "Investor Relations",
                                    bodyCopy: `Lorem ipsum dolor sit amet, consectetur adipiscing elit.`,
                                },
                            ])
    include ../../components/CM0007/CM0007-inc.pug
    +CM0007()