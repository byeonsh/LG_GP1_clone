                            .my-point__date
                                span.cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")= set.date
                            .my-point__point 
                                if set.isGain
                                    span.font-w-semibold-20.font-m-semibold-16.font-red +!{set.point}P
                                else
                                    span.font-w-semibold-20.font-m-semibold-16 -!{set.point}P
