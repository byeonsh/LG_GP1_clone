    mixin image(size1, size2=false, imgOfText)
        // block : image
        if (imgOfText)
            .image.c-image
                if(size2)
                    +printLazyPicture(`https://via.placeholder.com/${size1}/999999/333333`, `https://via.placeholder.com/${size2}/999999/333333`, max="1024", min="1025")(aria-hidden="true")                    
                    +imgOfText
                else 
                    +printLazyImage(`https://via.placeholder.com/${size1}/999999/333333`)(aria-hidden="true")
                    +imgOfText
                if block
                    block
        else
            .image.c-image
                if(size2)
                    +printLazyPicture(`https://via.placeholder.com/${size1}/999999/333333`, `https://via.placeholder.com/${size2}/999999/333333`, max="1024", min="1025")(aria-hidden="true")
                else 
                    +printLazyImage(`https://via.placeholder.com/${size1}/999999/333333`)(aria-hidden="true")
                if block
                    block

    mixin video-contents(size1, size2, videoType)
        // Display only when video is registered
        // block : media contents
        .c-media-contents
            // Video case
            +image(size1, size2)
                +floating-video(videoType)
    
    mixin inner-video-contents(size1, videoType)
        // Display only when video is registered
        // block : media contents
        .c-media-contents
            // Video case
            +image(size1)
                +floating-video(videoType)
    
    mixin ani-contents(size1, size2)
            // block : media contents
            .c-media-contents
                // Animation case
                +image(size1, size2)
                    +bg-video

    mixin inner-ani-contents(size1)
            // block : media contents
