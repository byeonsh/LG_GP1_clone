extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_headline.pug
include ../_common/_cs-form.pug

block meta 
    - var componentId = "CS0098"
    - var componentName = "CS Email Us_Inquiry"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    //- script(src=componentId+".js")
    script(src=componentId+".js" type="module")

block content

    mixin formCheckbox(label, linkLabel, name, val, id, count = "false", disabled = false, link=true)
        .c-checkbox-item
            label.checkbox(for=`${id}`)
                if(disabled)
                    input(type="checkbox", name=`${name}`, value=`${val}`, id=`${id}`, aria-label="", disabled="disabled")&attributes(attributes)
                else 
                    input(type="checkbox", name=`${name}`, value=`${val}`, id=`${id}`, aria-label="")&attributes(attributes)

                if(label)
                    span.label.font-m-normal-12.font-w-normal-20= label 
                        a(href="daum.net").link.font-m-normal-12.font-w-normal-20= linkLabel
                        -if(count >= 0 & count != "false") // for filter
                            sup.count= count 
                else 
                    if block 
                        span.label
                            block   
 

    // Component Markup
    .guide-text-type LGPD BR
    .c-wrapper.CS0098.type-text
        .component.type-form
            .CS0098__container
                .container.responsivegrid
                    .c-model-content-wrap
                        .c-cs-header
                        .c-require.font-m-normal-14.font-w-normal-14 #[em.require *] Required fields 
                    .c-container__inner     
                        .cs-form
                            .cs-form__wrap
                                .cmp-form
                                    +csForm_Select({id: 'select1', label: 'Selecione o responsável', require: 'true', requireMsg: 'responsável é obrigatório.​', value_01: 'Selecione', value_02: 'United Kingdom', class:'c-responsavel-valid' })
                                .cmp-form
                                    +csForm_Select({id: 'select2', label: 'Selecione o tipo de solicitação', require: 'true', requireMsg: 'Departamento é obrigatório.​', value_01: 'Selecione', value_02: 'United Kingdom', class:'c-responsavel-valid' })
                                .cmp-form
                                    +csForm_Select({id: 'select3', label: 'Selecione o Departamento', require: 'true', requireMsg: 'solicitação é obrigatório.​​', value_01: 'Selecione', value_02: 'United Kingdom', class:'c-responsavel-valid' })
                                .cmp-form
                                .cmp-form
                                    +csForm_Input({id: 'textInput__input1', label: 'Nome completo', type:"text", placeholder:"Digite seu nome", require: 'true', requireMsg: 'Nome completo é obrigatório.​​​', invalidMsg: "This subject is invalid." ,class:'c-subject-rquired-valid' })
                                .cmp-form
                                    +csForm_Input({id: 'textInput__input2', label: 'CPF', type:"text", placeholder:"Digit seu CPF", class:"c-subject-valid03" })     
                                .cmp-form
                                    +csForm_Input({id: 'textInput__input3', label: 'Telefone', type:"text", placeholder:"Digite seu telephone ou celuar", require: 'true', requireMsg: 'Telefone é obrigatório.​', invalidMsg: "This subject is invalid.", class:"c-subject-valid02 c-subject-rquired-valid" })
                                .cmp-form
                                    +csForm_Input({id: 'textInput__input4', label: 'Email', type:"text", placeholder:"Digit seu e-mail", require: 'true', requireMsg: 'Email é obrigatório.​​', invalidMsg: "Inclua '@' no seu endereço de e-mail.​" , class:"c-subject-rquired-valid" })
                                .cmp-form
                                    +csForm_Textarea({id: 'message', label: 'Descrição', placeholder:"Digite a descrição da solicitação", require: 'true', requireMsg: 'Descrição é Obrigatório.​​​', maxLength: "3900" , class:"c-responsavel-valid-textbox"})
                                .cmp-form
                                    // Using reCAPTCHA v3
                                    // +csForm_Captcha({id: 'pictureText', label: 'Digite o texto mostrado na imagem ou ouça o som.', placeholder:"DigDigite o texto da imagem", requireMsg: 'Descrição é Obrigatório.​​​', maxLength: "3900" , class:"c-subject-rquired-valid" })
                        
                    .cs-form__chk
                        +formCheckbox('Li e compreendi a ', 'Política de Privacidade.*', "name", "val1", "privacyPolicyCheck", count="false", false)
                        .c-warning.c-privacyPolicy-checked Política de privacidade é obrigatório.​


                .button.c-cta
                    +defaultButton({name: 'Cancelar', wSize: 'medium', mSize: 'small', buttonStyle: 'default'})
                    +defaultButton({name: 'Enviar', wSize: 'medium', mSize: 'small', buttonStyle: 'highlight', isButton: true})(class="c-submit" aria-label="" role="button")
    
