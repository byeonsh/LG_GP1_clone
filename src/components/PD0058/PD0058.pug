extends ../_common/_layout.pug
include ../_common/_index.pug

block meta 
    - var componentId = "PD0058"
    - var componentName = "Product selector"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")

block content
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-pd.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                        ],
                    };

    include ./PD0058-inc.pug
    +PD0058()

    mixin carousel-item-component(id, set) 
        - var index = Math.floor(Math.random() * 7);
        .cmp-carousel__inner(class=`${id}`)&attributes(attributes)
            .c-hero-banner
                +printLazyImage(`${set.images}`)

    mixin carousel-nested-component(id, type = "", itemOption)
        .carousel.panelcontainer
            // block : carousel
            .cmp-carousel.swiper.c-carousel(data-cmp-autoplay="autoplay" data-cmp-timedelay="5000" data-cmp-autopause="true" style="--heroTimer:5s" data-cmp-data-layer="")&attributes(attributes)
                .cmp-carousel__content.swiper-wrapper
                    - for (var i=0; i < itemOption.length; i++)
                        - var set = itemOption[i]
                        .cmp-carousel__item.swiper-slide.c-carousel__item
                            +carousel-item-component(id, set)(class=`${type}`)
                +hero-controls

