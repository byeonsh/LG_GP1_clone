mixin productCarouselList(num=4, params)
    - var options = {handlerStyle : null, ...params}
    .c-product-list.c-product-list--carousel.js-product-list
        .carousel.panelcontainer
            // block - carousel
            //- .cmp-carousel.swiper.c-carousel(data-cmp-data-layer="" class='mss')
            .cmp-carousel.swiper.c-carousel(data-cmp-data-layer="" class=`${num < 2 ? 'no-swiper':''}`)
                .cmp-carousel__content.swiper-wrapper
                    +sampleCarouselList(num)
                .c-carousel__handler(class={[options.handlerStyle] : options.handlerStyle != null})
                    .cmp-carousel__actions
                        +carouselBtn({type:"pagination", direction:"prev"})
                    +carouselPagination
                    .cmp-carousel__actions
                        +carouselBtn({type:"pagination", direction:"next"})

mixin productItemSlide($params)
    .cmp-carousel__item.swiper-slide.c-carousel__item.c-product-list__item(data-cmp-data-layer="" data-cmp-hook-carousel="item")
        +productCard($params)

