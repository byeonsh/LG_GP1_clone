                            li.c-list__item
                                .c-list__link
                                    .c-text-contents
                                        .title.c-text-contents__headline
                                            .cmp-title.font-w-light-36.font-m-normal-16(data-cmp-data-layer="") Exclusive Pricing
                                        .c-text-contents__bodycopy
                                            .cmp-text.font-w-normal-16.font-m-normal-12
                                                p Receive an extra 2% membership discount
                                            //- +linkButton({type:"text", color:"black", size:"medium", icon:true, name: "Terms & Condition"})
                                    +printLazyPicture(`../../assets/icon/icon-exclusive-64-64.svg`)
                            li.c-list__item
                                .c-list__link
                                    .c-text-contents
                                        .title.c-text-contents__headline
                                            .cmp-title.font-w-light-36.font-m-normal-16(data-cmp-data-layer="") Free Delivery
