                                    +printLazyPicture(`../../assets/icon/icon-buy-schedule-64-64.svg`)

mixin CT0102(option=false)
    .c-wrapper.CT0102
        .component
            .fluid-container
                // block : support
                // option
                if(option =='other')
                    +optionContentsBoxList('noneLinkType')
                else if(option =='ph')
                    +optionContentsBoxList('ph')
                else if(option =='za')
                    +optionContentsBoxList('za')
                else
                    +optionContentsBoxList()