mixin optionContentsBoxList
    .c-support.c-support--card.border-top
        .c-support__inner
            .c-support__title
            // block : text contents
            .c-text-contents
                .text.c-text-contents__headline 
                    +headline("font-w-light-56 font-m-light-28", "h2", "A better way to shop with LG")
                .text.c-text-contents__bodycopy 
                    .cmp-text.font-w-normal-24.font-m-normal-12(data-cmp-data-layer="")
                        p Take advantage of exclusive benefits for LG.com  shoppers

            .c-support__box
                ul.c-list.c-list--flex
                    li.c-list__item
                        .c-list__link
                            .c-text-contents
                                .title.c-text-contents__headline
                                    .cmp-title.font-w-light-36.font-m-normal-16(data-cmp-data-layer="") Free Shipping
                                .c-text-contents__bodycopy
                                    .cmp-text.font-w-normal-16.font-m-normal-12
                                        p Free, fast delivery straight to your door.
                            +printLazyPicture(`../../assets/icon/Icon-mylg-delivery-64-64.svg`)
                    li.c-list__item
                        .c-list__link
                            .c-text-contents
                                .title.c-text-contents__headline
                                    .cmp-title.font-w-light-36.font-m-normal-16(data-cmp-data-layer="") Buy now, pay later
                                .c-text-contents__bodycopy
                                    .cmp-text.font-w-normal-16.font-m-normal-12
                                        p Choose from 4 interest-free installments or 12-36 month financing with up to 0% APR.
                                    +linkButton({type:"text", color:"black", size:"medium", icon:true, name: "Terms & Condition"})
                            +printLazyPicture(`../../assets/icon/icon-mylg-klarna-64-64.svg`)
                    li.c-list__item
                        .c-list__link
                            .c-text-contents
                                .title.c-text-contents__headline
                                    .cmp-title.font-w-light-36.font-m-normal-16(data-cmp-data-layer="") Dynamic Scheduling
                                .c-text-contents__bodycopy
                                    .cmp-text.font-w-normal-16.font-m-normal-12
                                        p Schedule your delivery appointments during checkout.
                            +printLazyPicture(`../../assets/icon/icon-buy-schedule-64-64.svg`)



mixin CT0102
    .c-wrapper.CT0102
        .component
            .fluid-container
                // block : support
                // option
                +optionContentsBoxList