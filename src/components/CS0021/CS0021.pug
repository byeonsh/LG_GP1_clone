    .guide-text-type CS Inquiry Status
    .guide-text-option Case 01. Inquiries can only be made by email.

    // Component Markup
    // Case 01. Email
    .c-wrapper.CS0021.type-text
        .component.type-form
            .CS0021__container
                .c-model-content-wrap
                    .c-cs-header
                        // block : text-contents
                        .c-text-contents
                            .title.c-text-contents__headline
                                +headline('font-w-light-56 font-m-light-28',h2,'Check your inquiry status')
                    .c-require.font-m-normal-14.font-w-normal-14 #[em.require *] Required fields 

                .c-container__inner
                    .cs-form
                        .cs-form__wrap
                            .cmp-form
                                +csForm_Input({id:'receiptNumber', label: 'Receipt number', type:"text", info:'true', infoMsg:'Receipt number starting with GNU', formDefalut: 'true', requireMsg: 'Receipt number is required.', class:"c-checkEmail-email-valid", placeholder:"(e.g. GCE1234567890)" ,invalidMsg:'Sorry. The information you entered is not correct. Please check the case number or the e-mail address again.'})
                            .cmp-form
                                +csForm_Input({id:'email', label: 'Email', type:"text", formDefalut: 'true', requireMsg: 'Email is required.', class:"c-checkEmail-email-valid", placeholder:"(e.g. lg@domain.com)" ,invalidMsg:'This email address is invalid.'})

                .c-button-wrap
                    .button.c-cta
                        +defaultButton({name: 'Cancel', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton:'none'})(role="button")
                        +defaultButton({name: 'Track status', wSize: 'medium', mSize: 'small', buttonStyle: 'highlight'})(class="c-checkEmail-trackStatus-submit" aria-label="")
                        
