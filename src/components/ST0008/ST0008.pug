    // Component Markup

    mixin textContents(typeNumber)
        - var class1 = 'font-w-light-56 font-m-light-28';
        - var class2 = 'font-w-normal-24 font-m-normal-16';
        - var align = 'align-left';
        if (typeNumber == 2 || typeNumber == 4)
            - class1 = 'font-w-light-36 font-m-light-28';
            - class2 = 'font-w-normal-16 font-m-normal-16';
            - align = 'align-text-left';

        .c-text-contents
            .align-container 
                .c-text-contents__inner 
                    .title.c-text-contents__headline
                        +headline(class1)
                    .text.c-text-contents__bodycopy.font-regular 
                        .cmp-text(class=class2 data-cmp-data-layer="") 
                            p Body text can be up to 700 characters. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient. Body text can be up to 200 characters.
                    // block cta 
                    .button.c-cta
                        +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                        +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'highlight', isButton: false})
                    // or
                    // block cta 
                    .button.c-cta
                        +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                        +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
    
    mixin imgContents(typeNumber)
        .c-image-compare 
            .c-image-compare__image
                .image.c-image-compare__default.c-image 
                    case typeNumber 
                        when 2
                            +printLazyPicture('https://via.placeholder.com/768x512/333333', 'https://via.placeholder.com/763x429/333333')
                        when 4
                            +printLazyPicture('https://via.placeholder.com/768x512/333333', 'https://via.placeholder.com/763x429/333333')
                        default 
                            +printLazyPicture('https://via.placeholder.com/768x576/333333', 'https://www.lg.com/de/images/mnt-ultragear-32gq950-02-2-2-with-atw-desktop.jpg')

                    .text.c-image-compare__text.pos-center.pos-middle.font-regular.font-white
                        p.cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="") Lorem ipsum dolor sit amet, consectetuer adipiscingLorem ipsum dolor sit amet, consectetuer adipiscingLorem ipsum dolor sit amet, consectetuer adipiscingLorem ipsum dolor sit amet, consectetuer adipiscing
                .image.c-image-compare__cover.c-image 
                    case typeNumber 
                        when 2
                            +printLazyPicture('https://via.placeholder.com/768x512/666666', 'https://via.placeholder.com/763x429/666666')
                        when 4
                            +printLazyPicture('https://via.placeholder.com/768x512/666666', 'https://via.placeholder.com/763x429/666666')
                        default 
                            +printLazyPicture('https://via.placeholder.com/768x576/666666', 'https://www.lg.com/de/images/mnt-ultragear-32gq950-02-2-2-with-atw-desktop.jpg')
                    .text.c-image-compare__text.pos-center.pos-middle.font-regular.font-black 
                        p.cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="") Lorem ipsum dolor sit amet, consectetuer adipiscing
                .button.c-image-compare__track
                    button.cmp-button.c-image-compare__handle.move-left(type="button", aria-label="Move the slider to see more!", data-cmp-data-layer="")
                    button.cmp-button.c-image-compare__handle.move-right(type="button", aria-label="Move the slider to see more!", data-cmp-data-layer="")
            .text.c-image-compare__disclaimer
                .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                    p Disclaimer text can be up to 100 characters. Lorem ipsum dolor sit it amet, consectetuer adipiscing.

    //  Type1. Top Bottom Text 
    .guide-text-type Type 1 : Horizontal (Top Bottom Text) 
    .guide-text-option Option : Text Placement - Top
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-horizontal-tb
            .cmp-container
        
                // block : text-contents
                +textContents(1)

                // block : Image compare
                +imgContents(1)

    .guide-text-option Option : Text Placement - Bottom
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-horizontal-tb
            .cmp-container

                // block : Image compare
                +imgContents(1)
        
                // block : text-contents
                +textContents(1)

    //  Type2. Horizontal (Left Right Text)
    .guide-text-type Type2. Horizontal (Left Right Text)
    .guide-text-option Option : Text Placement - Right
