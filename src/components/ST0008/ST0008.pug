        .component.type-horizontal-lr
            .cmp-container
        
                // block : text-contents
                +textContents(2)

                // block : Image compare
                +imgContents(2)

    //  Type 3 : Vertical (Top Bottom Text)
    .guide-text-type Type 3 : Vertical (Top Bottom Text)
    .guide-text-option Option : Text Placement - Top
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-vertical-tb
            .cmp-container
        
                // block : text-contents
                +textContents(3)

                // block : Image compare
                +imgContents(3)

    .guide-text-option Option : Text Placement - Bottom
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-vertical-tb
            .cmp-container

                // block : Image compare
                +imgContents(3)
        
                // block : text-contents
                +textContents(3)


    // Type 4 : Vertical (Left Right Text)
    .guide-text-type Type 4 : Vertical (Left Right Text)
    .guide-text-option Option : Text Placement - Right
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-vertical-lr
            .cmp-container

                // block : Image compare
                +imgContents(4)
        
                // block : text-contents
                +textContents(4)

    .guide-text-option Option : Text Placement - Left
    .c-wrapper.ST0008.margin-top.margin-bottom.bg-default
        .component.type-vertical-lr
            .cmp-container
        
                // block : text-contents
                +textContents(4)

                // block : Image compare
                +imgContents(4)
