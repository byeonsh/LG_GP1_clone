    script(type="text/javascript").
        const btns = document.querySelectorAll('[class*="btnGuideCase"]');
        const guideCases = document.querySelectorAll('[id*="guideCase"]');
        //- select guide case 
        btns.forEach(btn => {
            btn.addEventListener('click', event => {
                event.preventDefault();
                const guideNum = btn.className.split('_')[1];
                btns.forEach(item => {
                    item.classList.remove('active');
                })
                btn.classList.add('active');
                guideCases.forEach(item => {
                    item.classList.remove('active');
                })
                guideCases[guideNum - 1].classList.add('active');
            });
        });
