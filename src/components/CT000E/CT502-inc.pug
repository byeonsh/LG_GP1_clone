mixin myLinkedLoginIcon(data)
    ul.my-linkedlogin-icon
        each set in data
            li 
                a(class='my-linkedlogin-icon__ico-box' href="#" role="button")
                    i(class=`my-linkedlogin-icon__ico my-linkedlogin-icon__ico--${set.apps}`)
                    span.sr-only= set.apps

