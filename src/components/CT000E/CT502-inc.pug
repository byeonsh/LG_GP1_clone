mixin CT502(option=false)
    mixin trigger(controlsId)
        .button
            button.cmp-button.c-accordion__button.js-accordion-trigger(aria-expanded="false" aria-controls=`${controlsId}`)
                span.c-accordion__button-text.expand.sr-only Expand
                span.c-accordion__button-text.collapse.sr-only Collapse
    
    mixin contentsBody(useImg, listType, content, faq)
        if listType 
            .c-wide-list(role="list")
                //- +modelList({isList:true, linkType: true, productName: 'All'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
                +modelList({isList:true, linkType: true, productName: 'productlist'}) 
        else
            // block - text contents
            .c-text-contents.c-accordion__body-text
                span.c-accordion__initial.font-w-normal-20.font-m-normal-18.font-semibold(aria-hidden="true") A.
                .text.c-text-contents__bodycopy.font-w-normal-16.font-m-normal-16
                    span.cmp-text(data-cmp-data-layer="") #{faq.content}

            if useImg
                .image.c-image.c-accordion__body-image
                    +printLazyImage("https://via.placeholder.com/1600x900/000/333/?text=Image", "")

    .my-signIn__list
        .my-signIn__text
            if (option === "sign up")
                h3.font-w-normal-14i.font-m-normal-14 Sign up with
            //- 2023-06-08 ( case : Template – B2B email Step1 )
            else if (option === "B2B sign up")
                span.font-w-normal-14i.font-m-normal-14 Already have an account? 
                a.font-w-normal-14i.font-m-normal-14.font-underline(href="#" target="_self" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") Sign in
                h4.divLine.font-w-normal-14i.font-m-normal-14 or
            else
                h3.font-w-normal-14i.font-m-normal-14 Sign in with                   
        +myLinkedLoginIcon([
            {
                apps:"apple",
            },
            {
                apps:"amazon",
            },
            {
                apps:"google",
            },
            {
                apps:"facebook",
            },
        ])
