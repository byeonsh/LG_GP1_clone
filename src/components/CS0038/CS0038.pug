                    };

    mixin textContents(params)
        - var option={type:'', title: true, bodycopy: false, button: false, ...params}
        .c-text-contents
            if option.title
                .title.c-text-contents__headline
                    .cmp-title.font-w-semibold-20.font-m-semibold-16(data-cmp-data-layer="")
                        // Heading Tag Option - div or h1 or h2 or h3 or h4 or h5 or h6
                        case option.type
                            when "step1"
                                h3 Step1.
                                | Choose the way to register.
                            when "step2"
                                h3 Step2.
                                | Enter or Select your model and serial number.
                            when "step3"
                                h3 Step3.
                                | Fill in other purchase related information.
                            when "step4"
                                h3 Step4.
                                | Register and enjoy your benefits.
                            when "step5"
                                h3 Step5.
                                | Register and enjoy your benefits.
                            when "11"
                                h3 Step1.
                                | Choose the way to register.
                            when "22"
                                h3 Step2.
                                | Enter or Select your model and serial number.
                            when "33"
                                h3 Step3.
                                | Fill in other purchase related information.
                            when "44"
                                h3 Step4.
                                | Register and enjoy your benefits.
                            when "55"
                                h3 Step5.
                                | Register and enjoy your benefits.
                            when "buttonNone"
                                h3 Step1.
                                | Choose the way to register.
                            default
                                h3 
            if option.bodycopy
                .text.c-text-contents__bodycopy
                    .cmp-text.font-w-normal-16.font-m-normal-14(data-cmp-data-layer="")                
                        case option.type
                            when "step1"
                                p Scan barcode or QR code helps to input model and serial number at once. 
                            when "step2"
                                p You have four options to input model number.
                            when "step3"
                                p Expedited support and service on questions and issues.
                            when "step4"
                                p You can find registered product at MyLG page.
                            when "step5"
                                p You can find registered product at MyLG page.
                            when "1"
