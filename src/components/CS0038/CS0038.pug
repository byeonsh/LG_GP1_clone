                            when "4"
                                p You can find registered product at MyLG page.
                            when "5"
                                p You can find registered product at MyLG page.
                            when "buttonNone"
                                p You can find registered product at MyLG page.
                            default
                                p 
        if option.button
            case option.type
                when "buttonNone"
                    //- .button.c-cta
                    //-     +linkButton({type:'box-outlined', size: 'small', name:'LEARN MORE'})
                default 
                    .button.c-cta
                        +linkButton({type:'box-outlined', size: 'small', name:'Learn more'})

    mixin textListItem2(params)
        - var option={name:'', type:'', title: false, bodycopy: false, button: false, ...params}
        li.c-list__item
            // block : text-contents
            if(option.type == 'div')
                .c-list__link
                    +image2
                    +textContents({type:`${option.name}`, bodycopy: `${option.bodycopy}`, button: `${option.button}`})
            if(option.type == 'a')
                // option : target (_blank or _self)
                a(href="#" class="c-list__link")
                    +image2
                    +textContents({type:`${option.name}`, title: `${option.title}`, bodycopy: `${option.bodycopy}`, button: `${option.button}`})
            if(option.type == 'popup')
                // popup : Please enter the input url, popup width and height, and add class 'js-popup'.
                a(href="https://www.lgechat.com/us/index.html" target="popup" class="c-list__link js-open-popup"  data-width="344" data-height="553" title="Opens in a new popup window")
                    +image2
                    +textContents({type:`${option.name}`, title: `${option.title}`, bodycopy: `${option.bodycopy}`, button: `${option.button}`})
                    
    mixin image2
        // block : image
        .image.c-image
            +printLazyImage('https://via.placeholder.com/48x48/cccccc/333333')
            if block
                block            
   
