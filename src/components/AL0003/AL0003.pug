extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_headline.pug

include ../_common/_video.pug

block meta 
    - var componentId = "AL0003"
    - var componentName = "Press & Media (Detail)"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

//- block scripts
//-     script(src=componentId+".js" type="module")

block content
    mixin image(size1, size2)
        // block : image
        .image.c-image
            +printLazyPicture(`https://via.placeholder.com/${size1}/999999/333333`, `https://via.placeholder.com/${size2}/999999/333333`)
            if block
                block

    mixin video-contents(size1, size2, videoType)
        // Display only when video is registered
        // block : media contents
        .c-media-contents
            // Video case
            +image(size1, size2)
                +floating-video(videoType)  

    mixin video-contents(size1, size2, videoType)
        // Display only when video is registered
        // block : media contents
        .c-media-contents
            // Video case
            +image(size1, size2)
                +floating-video(videoType)    

    .c-wrapper.align-center(class=componentId)
        //- block : ST0003 
        .component
            .cmp-container.align-center
                //- block : text-contents
                .c-detail-area
                    .c-text-contents
                        .title.c-text-contents__headline
                            // 2022-11-18 change the default font size
                            h2.cmp-title.font-w-light-56.font-m-light-28(data-cmp-data-layer="") LG Electronics recalls portable air conditioners due to fire hazard
                        .contents.c-text-contents__contentsline
                            .c-doc-date
                                span.doc.font-w-normal-16.font-m-normal-14(data-cmp-data-layer="") Home Entertainment
                                span.date.font-w-normal-16.font-m-normal-14(data-cmp-data-layer="") 31/03/2022
                            
                .c-detail-area-contents
                    .c-part.c-detail-content.c-text-contents
                        .c-detail-content__video
                            +video-contents('310x175', '952x538', 'youtube')
                        .text.c-text-contents__bodycopy
                            p.cmp-text.font-w-normal-24.font-m-normal-16(data-cmp-data-layer="") Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.                
                .c-pagination.c-control-link
                    ul
                        li 
                            span.to.to-prev Previous
                            .to-contents
                                .prev-contents
                                    a(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") LG Showcases Real-Life Benefits Of Lg Home At Innofest Europe 2019
                                    span.to-date 31/03/2022
                        li 
                            span.to.to-next Next
                            .to-contents
                                .next-contents
                                    a(href="#" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="") Tax Strategy For The Year Ending 31 Dec 2021
                                    span.to-date 31/03/2022
                .button.c-cta.c-back-to-list
                    .c-back-to-list-box
                        +defaultButton({name: 'Back to List', wSize: 'medium', mSize: 'medium', buttonStyle: 'default', isButton: true})
