                            {useDualImage: true, name:"Door-in-Door™ Fridge Freezers", description:"Lorem ipsum dolor sit amet, consectetur adipiscing elit", nameFontStyle, descFontStyle },
                            {useDualImage: true, name:"Multi Door Fridge Freezers", description:"Lorem ipsum dolor sit amet, consectetur adipiscing elit", nameFontStyle, descFontStyle },
                            {useDualImage: true, name:"Multi Door Fridge Freezers", description:"Lorem ipsum dolor sit amet, consectetur adipiscing elit", nameFontStyle, descFontStyle },
