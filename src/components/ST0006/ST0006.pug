extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_carousel.pug
include ../_common/_headline.pug
include ../_common/_title-area.pug

block meta 
    - var componentId = "ST0006"
    - var componentName = "Category Selector"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")

block content
    // An area for testing options when coding. 
    // Please do not use it during development.
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-st.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                        ],
                        '.c-carousel .c-text-contents' : [
                            {
                                'name' : 'Text Align',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'align-text-left', 'remove' : 'align-text-center, align-text-right'},
                                    {'toggle' : false, 'add' : 'align-text-center', 'remove' : 'align-text-left, align-text-right'},
                                    {'toggle' : false, 'add' : 'align-text-right', 'remove' : 'align-text-left, align-text-center'},
                                ]
                            }
                        ],
                        '.c-text-contents__bodycopy' : [
                            {
                                'name' : 'Font Options',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'font-regular', 'remove' : 'font-bold'},
                                    {'toggle' : false, 'add' : 'font-bold', 'remove' : 'font-regular'},
                                    {'toggle' : true, 'add' : 'font-italic'},
                                    {'toggle' : true, 'add' : 'font-underline'},
                                ]
                            }
                        ],
                    };

    // Component Markup

    mixin image
        // block : image
        .image.c-image
            +printLazyImage('https://via.placeholder.com/520x520/999999/333333')
            if block
                block

    mixin categoryItem(type)
        .cmp-carousel__item.swiper-slide(data-cmp-data-layer="" data-cmp-hook-carousel="item")
            // block : text contents
            // Text align options default : center
            // option : target (_blank or _self)
            // GA4
            a(href="#" target="_blank" class="c-text-contents align-text-center" data-link-name="" data-link-destination="" data-link-menu="" data-link-page-type="")
                if type !== "home" 
                    .text.c-text-contents__headline.top
                        .cmp-text.font-w-light-36.font-m-light-24(data-cmp-data-layer="")
                            p INSTAVIEW™ DOOR-IN-DOOR®
                +image
                .text.c-text-contents__headline
                    .cmp-text.font-w-normal-24.font-m-normal-16(data-cmp-data-layer="")
                        p INSTAVIEW™ DOOR-IN-DOOR®
                .text.c-text-contents__bodycopy
                    .cmp-text.font-w-normal-16.font-m-normal-12(data-cmp-data-layer="")
                        p Functional elegance that fits your modern kitchen perfectly.
            if block
                block

   
    // Type1. Category Selector
    .guide-text-type Type1. Category Selector
    .c-wrapper.ST0006.type-category.bg-default.margin-top.margin-bottom
        .component
            .cmp-container
                +component-title-area({
                    headline : {
                        text : "Heading can be up to  60 characters lorem ipsum",
                    }
                })(class="c-region-header--vacate-side")
                //- // block : text-contents
                //- .title.c-text-contents
                //-     +headline('c-text-contents__headline font-w-light-56 font-m-light-28')
                .carousel.panelcontainer
                    // block : swiper-category
                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                        .cmp-carousel__content.swiper-wrapper
                            - for (var x = 0; x < 5; x++)
                                +categoryItem
                        .c-carousel__handler
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"prev"})
                            +carouselPagination
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"next"})

    .guide-text-option Case. Less than 5.
    .c-wrapper.ST0006.type-category.bg-default.margin-top.margin-bottom
        .component
            .cmp-container
                +component-title-area({
                    headline : {
                        text : "Heading can be up to  60 characters lorem ipsum",
                    }
                })(class="c-region-header--vacate-side")
                //- // block : text-contents
                //- .title.c-text-contents
                //-     +headline('c-text-contents__headline font-w-light-56 font-m-light-28')
                .carousel.panelcontainer
                    // block : swiper-category
                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                        .cmp-carousel__content.swiper-wrapper
                            - for (var x = 0; x < 4; x++)
                                +categoryItem
                        .c-carousel__handler
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"prev"})
                            +carouselPagination
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"next"})

    // Type2. Category Selector (Home)
    .guide-text-type Type2. Category Selector (Home)
    .c-wrapper.ST0006.type-home.bg-default.margin-top.margin-bottom
        .component
            .cmp-container
                .carousel.panelcontainer
                    // block : swiper-category
                    .cmp-carousel.swiper.c-carousel.c-carousel--category(data-cmp-data-layer="")
                        .cmp-carousel__content.swiper-wrapper
                            - for (var x = 0; x < 9; x++)
                                +categoryItem("home")
                        .c-carousel__handler
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"prev"})
                            +carouselPagination
                            .cmp-carousel__actions
                                +carouselBtn({type:"pagination", direction:"next"})
                    // block cta 
                    .button.c-cta
                        +textButton({name: 'More', wSize: 'medium', mSize: 'medium', buttonStyle: 'down', isButton: true})

