extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_headline.pug
include ../_common/_carousel.pug
include ../_common/_title-area.pug

block meta 
    - var componentId = "AL0021"
    - var componentName = "About LG"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")

block content
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-st.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Top margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                ]
                            },
                            {
                                'name' : 'Bottom margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                        ],
                    };
    mixin swiperList (param)
        - var size_pc = "464x300";
        - var size_mo = "310x206";
        each data in param 
            div.cmp-carousel__item.swiper-slide.c-list__item
                .c-list-item__img
                    +printLazyPicture(
                        `https://via.placeholder.com/${size_mo}`, 
                        `https://via.placeholder.com/${size_pc}`
                    )
                .c-list-item__contents.c-text-contents 
                    .title.c-text-contents__title
                        strong.cmp-title.font-w-light-36.font-m-light-24(data-cmp-data-layer="")= data.titleName
                    .text.c-text-contents__bodycopy
                        p.cmp-text.font-w-normal-24.font-m-normal-16(data-cmp-data-layer="")!= data.bodyCopy
                    //- +linkButton({type:"box-outlined", color:"black", size:"medium", name: "LEARN MORE"})
                    +defaultButton({name: 'Learn More', wSize: 'medium', mSize: 'small', buttonStyle: 'default transparent', isButton: false})(data-link-destination="" data-link-name="learn_more" data-link-menu="" data-link-page-type="")


    mixin handler                           
        .c-carousel__handler
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"prev"})
            +carouselPagination
            .cmp-carousel__actions
                +carouselBtn({type:"pagination", direction:"next"})

    .c-wrapper.margin-top.margin-bottom(class=componentId)
