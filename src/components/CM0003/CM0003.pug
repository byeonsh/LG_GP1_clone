extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_sns-list.pug
include ../_common/_pop-msg.pug

block meta 
    - var componentId = "CM0003"
    - var componentName = "Social Share"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    script(src=componentId+".js" type="module")

block content
    // An area for testing options when coding. 
    // Please do not use it during development.
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-cm.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                        ],
                    };
                    
    // Component Markup
    .c-wrapper.CM0003.margin-top.margin-bottom.bg-default
        .component
            .cmp-container
                //- block : sns share
                .c-sns-share
                    .button
                        // 2023-01-27 : Add role to download link for tagging
                        +iconButton({
                            type:"link",
                            name:"download",
                            class:"download",
                            color:"black",
                            comment:false,
                        })(role="button")
                    //- block : tooltip
                    .c-tooltip
                        .button
                            +iconButton({
                                type:"button",
                                name:"Share",
                                class:"share",
                                color:"black",
                                otherClass:"c-tooltip__button",
                                ariaControls:"snsShare", 
                                expanded:"false"
                            })
                        .c-tooltip__container.top-right(id="snsShare")
                            // 2022-11-04
                            .c-tooltip__contents
                                // sns list
                                +snsList

block modal
    +printLayerPopup('popCopyComplete')
