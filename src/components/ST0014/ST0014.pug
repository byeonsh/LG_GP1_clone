extends ../_common/_layout.pug
include ../_common/_button.pug
include ../_common/_image.pug
include ../_common/_video.pug
include ../_common/_headline.pug

block meta 
    - var componentId = "ST0014"
    - var componentName = "Image - Layered Text"
    - var description = "description text"
    - var keywords = "keyword list"
    title #{componentId}. #{componentName}
    meta(name="description" content=description)
    meta(name="keywords" content=keywords)

block styles
    link(rel="stylesheet", href=componentId+".css")

block scripts
    //- script(src=componentId+".js")

block content

    // An area for testing options when coding. 
    // Please do not use it during development.
    .guide 
        .grid-1600 
        .grid-1440
        .inner
            .guide-list
                a(href="../../list-st.html") List 
            .guide-title #{componentId}. #{componentName}
            .guide-wrapper
                script. 
                    const guideList = {
                        '.c-wrapper' : [
                            {
                                'name' : 'Margin',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'margin-top'},
                                    {'toggle' : true, 'add' : 'margin-bottom'},
                                ]
                            },
                            {
                                'name' : 'Top Border',
                                'buttons' : [
                                    {'toggle' : true, 'add' : 'border-top'},
                                ]
                            },
                            {
                                'name' : 'BG Color',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'bg-default', 'remove' : 'bg-white, bg-lightgray, bg-darkgray, bg-black'},
                                    {'toggle' : false, 'add' : 'bg-white', 'remove' : 'bg-default, bg-lightgray, bg-darkgray, bg-black'},
                                    {'toggle' : false, 'add' : 'bg-lightgray', 'remove' : 'bg-default, bg-white, bg-darkgray, bg-black'},
                                    {'toggle' : false, 'add' : 'bg-darkgray', 'remove' : 'bg-default, bg-white, bg-lightgray, bg-black'},
                                    {'toggle' : false, 'add' : 'bg-black', 'remove' : 'bg-default, bg-white, bg-lightgray, bg-darkgray'},
                                ]
                            },
                            {
                                'name' : 'Text Placement',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'place-text-left', 'remove' : 'place-text-right'},
                                    {'toggle' : false, 'add' : 'place-text-right', 'remove' : 'place-text-left'},
                                ]
                            },
                            {
                                'name' : 'Align',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'align-left', 'remove' : 'align-center, align-right'},
                                    {'toggle' : false, 'add' : 'align-center', 'remove' : 'align-left, align-right'},
                                    {'toggle' : false, 'add' : 'align-right', 'remove' : 'align-left, align-center'},
                                ]
                            },
                        ],
                        '.c-text-contents__bodycopy' : [
                            {
                                'name' : 'Font Options',
                                'buttons' : [
                                    {'toggle' : false, 'add' : 'font-regular', 'remove' : 'font-bold'},
                                    {'toggle' : false, 'add' : 'font-bold', 'remove' : 'font-regular'},
                                    {'toggle' : true, 'add' : 'font-italic'},
                                    {'toggle' : true, 'add' : 'font-underline'},
                                ]
                            }
                        ],
                    };

    // Component Markup

    mixin text-contents(params)
        // block : text-contents
        .c-text-contents
            .title.c-text-contents__headline
                +headline('font-w-light-56 font-m-light-28')
            .text.c-text-contents__bodycopy
                .cmp-text(class='font-w-normal-24 font-m-normal-16' data-cmp-data-layer="") 
                    p Body text can be up to 350 characters. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla
            // block :cta 
            .button.c-cta
                +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                +defaultButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'highlight', isButton: false})
            .button.c-cta
                +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
                +textButton({name: 'Button Text', wSize: 'medium', mSize: 'small', buttonStyle: 'default', isButton: false})
    mixin image(size1, size2)
        // block : image
        .image.c-image
            +printLazyPicture(`https://via.placeholder.com/${size1}/999999/333333`, `https://via.placeholder.com/${size2}/999999/333333`)
            if block
                block

    mixin video-contents(size1, size2, videoType)
        // Display only when video is registered
        // block : media contents
        .c-media-contents
            // Video case
            +image(size1, size2)
                +floating-video(videoType)

    mixin img-contents(size1, size2)
        // block : media contents
        .c-media-contents
            // Image case
            +image(size1, size2)
    .guide-text-option Option. Full Image Text Left/Right Type  – [A] area fixed on the bottom in desktop version
    .c-wrapper.ST0014.margin-top.margin-bottom.place-text-left
        // Full image
        .component.full
            .cmp-container
                +text-contents
                +video-contents('768x576', '1600x700', 'brightcove')

    .guide-text-option Option. Wide Image Text Left/Right Type – [A] area fixed on the bottom in desktop version
    .c-wrapper.ST0014.margin-top.margin-bottom.place-text-left
        // Wide image
        .component.wide
            .cmp-container
                +text-contents
                +img-contents('768x512', '1440x666')
                
    .guide-text-option Option. Standard Image Text Left/Right Type
    .c-wrapper.ST0014.margin-top.margin-bottom.place-text-left
        // Standard image
        .component.standard
            .cmp-container
                +text-contents
                +video-contents('768x512', '800x500', 'youtube')

    .guide-text-option Option. Standard Narrow Image Text Left/Right Type
    .c-wrapper.ST0014.margin-top.margin-bottom.place-text-left
        // Standard Narrow image
        .component.standard-narrow
            .cmp-container
                +text-contents
                +video-contents('768x1025', '546x728', 'youtube')
                