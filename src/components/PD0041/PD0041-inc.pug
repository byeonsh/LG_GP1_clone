                        // block : carousel
                        // 2023-02-08 Add class according to the number of columns
                        .cmp-carousel.swiper.c-carousel.column-2(data-cmp-data-layer="")
                            .cmp-carousel__content.swiper-wrapper
                                - for (var x = 0; x < 5; x++)
                                    +carouselItem(x, ["Badge1","Badge2"])
                            +carouselHandler
    else if (option == 'COLUMN2S')
